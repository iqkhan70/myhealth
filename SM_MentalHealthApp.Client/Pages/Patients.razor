@page "/patients"
@inject HttpClient Http
@inject NotificationService NotificationService
@inject IAuthService AuthService
@using SM_MentalHealthApp.Shared
@using SM_MentalHealthApp.Client.Services

<div class="patients-page">
    <div class="patients-header">
        @if (AuthService.CurrentUser?.RoleId == 2) // Doctor
        {
            <h2>My Patients</h2>
            <p>View and manage your assigned patients' mental health journey.</p>
        }
        else if (AuthService.CurrentUser?.RoleId == 3) // Admin
        {
            <h2>All Patients</h2>
            <p>Manage all patient records and view their mental health journey.</p>
            <button @onclick="ShowAddPatientForm" class="add-patient-btn">
                ‚ûï Add New Patient
            </button>
        }
        else
        {
            <h2>Access Denied</h2>
            <p>You don't have permission to view this page.</p>
        }
    </div>

    @if (AuthService.CurrentUser?.RoleId == 2 || AuthService.CurrentUser?.RoleId == 3) // Doctor or Admin
    {
        <!-- Search and Filter -->
        <div class="search-section">
            <div class="search-bar">
                <input @bind="searchTerm" @bind:after="FilterPatients" 
                       placeholder="Search patients by name or email..." 
                       class="search-input" />
                <button @onclick="SearchPatients" class="search-btn">üîç</button>
            </div>
            <div class="filter-options">
                <select @bind="statusFilter" @bind:after="FilterPatients" class="filter-select">
                    <option value="">All Patients</option>
                    <option value="active">Active Only</option>
                    <option value="inactive">Inactive Only</option>
                </select>
            </div>
        </div>

        <!-- Patients List -->
        <div class="patients-content">
        @if (isLoading)
        {
            <div class="loading-state">
                <div class="loading-spinner"></div>
                <p>Loading patients...</p>
            </div>
        }
        else if (filteredPatients.Any())
        {
            <div class="patients-grid">
                @foreach (var patient in filteredPatients)
                {
                    <div class="patient-card @(patient.IsActive ? "active" : "inactive")">
                        <div class="patient-header">
                            <div class="patient-info">
                                <h3>@patient.FirstName @patient.LastName</h3>
                                <p class="patient-email">@patient.Email</p>
                                <p class="patient-dob">Born: @patient.DateOfBirth.ToString("MMM dd, yyyy")</p>
                                @if (!string.IsNullOrEmpty(patient.Gender))
                                {
                                    <p class="patient-gender">@patient.Gender</p>
                                }
                            </div>
                            <div class="patient-status">
                                <span class="status-badge @(patient.IsActive ? "active" : "inactive")">
                                    @(patient.IsActive ? "Active" : "Inactive")
                                </span>
                            </div>
                        </div>
                        
                        <div class="patient-stats">
                            <div class="stat-item">
                                <span class="stat-label">Journal Entries:</span>
                                <span class="stat-value">@patient.JournalEntries.Count</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-label">Last Login:</span>
                                <span class="stat-value">
                                    @(patient.LastLoginAt?.ToString("MMM dd, yyyy") ?? "Never")
                                </span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-label">Member Since:</span>
                                <span class="stat-value">@patient.CreatedAt.ToString("MMM dd, yyyy")</span>
                            </div>
                        </div>

                        <div class="patient-actions">
                            <button @onclick="() => ViewPatientDetails(patient)" class="action-btn view-btn">
                                üëÅÔ∏è View Details
                            </button>
                            <button @onclick="() => EditPatient(patient)" class="action-btn edit-btn">
                                ‚úèÔ∏è Edit
                            </button>
                            <button @onclick="() => ViewPatientStats(patient)" class="action-btn stats-btn">
                                üìä Stats
                            </button>
                            @if (patient.IsActive)
                            {
                                <button @onclick="() => DeactivatePatient(patient)" class="action-btn deactivate-btn">
                                    üö´ Deactivate
                                </button>
                            }
                            else
                            {
                                <button @onclick="() => ReactivatePatient(patient)" class="action-btn reactivate-btn">
                                    ‚úÖ Reactivate
                                </button>
                            }
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-icon">üë•</div>
                <h4>No patients found</h4>
                <p>@(string.IsNullOrEmpty(searchTerm) ? "Add your first patient to get started!" : "No patients match your search criteria.")</p>
            </div>
        }
        </div>
    }
</div>

<!-- Add/Edit Patient Modal -->
@if (showPatientForm)
{
    <div class="modal-overlay" @onclick="ClosePatientForm">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3>@(editingPatient == null ? "Add New Patient" : "Edit Patient")</h3>
                <button @onclick="ClosePatientForm" class="close-btn">‚úï</button>
            </div>
            
            <div class="modal-body">
                <div class="form-group">
                    <label>First Name *</label>
                    <input @bind="patientForm.FirstName" class="form-input" />
                </div>
                
                <div class="form-group">
                    <label>Last Name *</label>
                    <input @bind="patientForm.LastName" class="form-input" />
                </div>
                
                <div class="form-group">
                    <label>Email *</label>
                    <input @bind="patientForm.Email" type="email" class="form-input" />
                </div>
                
                <div class="form-group">
                    <label>Date of Birth *</label>
                    <input @bind="patientForm.DateOfBirth" type="date" class="form-input" />
                </div>
                
                <div class="form-group">
                    <label>Gender</label>
                    <select @bind="patientForm.Gender" class="form-input">
                        <option value="">Select Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                        <option value="Prefer not to say">Prefer not to say</option>
                    </select>
                </div>
            </div>
            
            <div class="modal-footer">
                <button @onclick="ClosePatientForm" class="btn btn-secondary">Cancel</button>
                <button @onclick="SavePatient" disabled="@isSaving" class="btn btn-primary">
                    @(isSaving ? "Saving..." : (editingPatient == null ? "Add Patient" : "Update Patient"))
                </button>
            </div>
        </div>
    </div>
}

<!-- Patient Details Modal -->
@if (showPatientDetails && selectedPatient != null)
{
    <div class="modal-overlay" @onclick="ClosePatientDetails">
        <div class="modal-content patient-details-modal" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3>Patient Details - @selectedPatient.FirstName @selectedPatient.LastName</h3>
                <button @onclick="ClosePatientDetails" class="close-btn">‚úï</button>
            </div>
            
            <div class="modal-body">
                <div class="patient-details-grid">
                    <div class="detail-section">
                        <h4>Personal Information</h4>
                        <div class="detail-item">
                            <span class="detail-label">Name:</span>
                            <span class="detail-value">@selectedPatient.FirstName @selectedPatient.LastName</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Email:</span>
                            <span class="detail-value">@selectedPatient.Email</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Date of Birth:</span>
                            <span class="detail-value">@selectedPatient.DateOfBirth.ToString("MMM dd, yyyy")</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Gender:</span>
                            <span class="detail-value">@(selectedPatient.Gender ?? "Not specified")</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Status:</span>
                            <span class="status-badge @(selectedPatient.IsActive ? "active" : "inactive")">
                                @(selectedPatient.IsActive ? "Active" : "Inactive")
                            </span>
                        </div>
                    </div>
                    
                    <div class="detail-section">
                        <h4>Account Information</h4>
                        <div class="detail-item">
                            <span class="detail-label">Member Since:</span>
                            <span class="detail-value">@selectedPatient.CreatedAt.ToString("MMM dd, yyyy 'at' h:mm tt")</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Last Login:</span>
                            <span class="detail-value">@(selectedPatient.LastLoginAt?.ToString("MMM dd, yyyy 'at' h:mm tt") ?? "Never")</span>
                        </div>
                    </div>
                    
                    <div class="detail-section">
                        <h4>Activity Summary</h4>
                        <div class="detail-item">
                            <span class="detail-label">Journal Entries:</span>
                            <span class="detail-value">@selectedPatient.JournalEntries.Count</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Chat Sessions:</span>
                            <span class="detail-value">@selectedPatient.ChatSessions.Count</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="modal-footer">
                <button @onclick="ClosePatientDetails" class="btn btn-secondary">Close</button>
                <button @onclick="() => { ClosePatientDetails(); EditPatient(selectedPatient); }" class="btn btn-primary">Edit Patient</button>
            </div>
        </div>
    </div>
}

<!-- Patient Stats Modal -->
@if (showPatientStats && selectedPatient != null && patientStats is not null)
{
    <div class="modal-overlay" @onclick="ClosePatientStats">
        <div class="modal-content patient-stats-modal" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3>Patient Statistics - @selectedPatient.FirstName @selectedPatient.LastName</h3>
                <button @onclick="ClosePatientStats" class="close-btn">‚úï</button>
            </div>
            
            <div class="modal-body">
                <div class="stats-grid">
                    <div class="stat-card">
                        <h4>Journal Activity</h4>
                        <div class="stat-value">@patientStats.TotalJournalEntries</div>
                        <div class="stat-label">Total Entries</div>
                    </div>
                    
                    <div class="stat-card">
                        <h4>Recent Activity</h4>
                        <div class="stat-value">@patientStats.EntriesLast30Days</div>
                        <div class="stat-label">Last 30 Days</div>
                    </div>
                    
                    <div class="stat-card">
                        <h4>Mood Distribution</h4>
                        <div class="mood-stats">
                            @foreach (var mood in patientStats.MoodDistribution)
                            {
                                <div class="mood-stat">
                                    <span class="mood-label">@mood.Key:</span>
                                    <span class="mood-count">@mood.Value</span>
                                </div>
                            }
                        </div>
                    </div>
                    
                    <div class="stat-card">
                        <h4>Chat Activity</h4>
                        <div class="stat-value">@patientStats.TotalChatSessions</div>
                        <div class="stat-label">Chat Sessions</div>
                    </div>
                </div>
            </div>
            
            <div class="modal-footer">
                <button @onclick="ClosePatientStats" class="btn btn-secondary">Close</button>
            </div>
        </div>
    </div>
}

@code {
    private List<Patient> patients = new();
    private List<Patient> filteredPatients = new();
    private Patient? selectedPatient;
    private PatientStats? patientStats;
    private bool isLoading = true;
    private bool showPatientForm = false;
    private bool showPatientDetails = false;
    private bool showPatientStats = false;
    private bool isSaving = false;
    private Patient? editingPatient;
    private Patient patientForm = new();
    private string searchTerm = string.Empty;
    private string statusFilter = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadPatients();
    }

    private async Task LoadPatients()
    {
        try
        {
            isLoading = true;
            
            if (AuthService.CurrentUser?.RoleId == 2) // Doctor - load only assigned patients
            {
                patients = await Http.GetFromJsonAsync<List<Patient>>($"api/admin/doctor/{AuthService.CurrentUser.Id}/patients") ?? new();
            }
            else if (AuthService.CurrentUser?.RoleId == 3) // Admin - load all patients
            {
                patients = await Http.GetFromJsonAsync<List<Patient>>("api/patient") ?? new();
            }
            else
            {
                patients = new(); // No access
            }
            
            filteredPatients = patients.ToList();
        }
        catch (Exception ex)
        {
            NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to load patients: " + ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }


    private void SearchPatients()
    {
        FilterPatients();
    }

    private void FilterPatients()
    {
        filteredPatients = patients.Where(p => 
            (string.IsNullOrEmpty(searchTerm) || 
             p.FirstName.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
             p.LastName.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
             p.Email.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)) &&
            (string.IsNullOrEmpty(statusFilter) ||
             (statusFilter == "active" && p.IsActive) ||
             (statusFilter == "inactive" && !p.IsActive))
        ).ToList();
    }

    private void ShowAddPatientForm()
    {
        editingPatient = null;
        patientForm = new Patient { DateOfBirth = DateTime.Now.AddYears(-25) };
        showPatientForm = true;
    }

    private void EditPatient(Patient patient)
    {
        editingPatient = patient;
        patientForm = new Patient
        {
            Id = patient.Id,
            FirstName = patient.FirstName,
            LastName = patient.LastName,
            Email = patient.Email,
            DateOfBirth = patient.DateOfBirth,
            Gender = patient.Gender,
            IsActive = patient.IsActive
        };
        showPatientForm = true;
    }

    private void ClosePatientForm()
    {
        showPatientForm = false;
        editingPatient = null;
        patientForm = new Patient();
    }

    private async Task SavePatient()
    {
        if (string.IsNullOrWhiteSpace(patientForm.FirstName) || 
            string.IsNullOrWhiteSpace(patientForm.LastName) || 
            string.IsNullOrWhiteSpace(patientForm.Email))
        {
            NotificationService.Notify(NotificationSeverity.Warning, "Validation", "Please fill in all required fields.");
            return;
        }

        try
        {
            isSaving = true;
            
            if (editingPatient == null)
            {
                var result = await Http.PostAsJsonAsync("api/patient", patientForm);
                if (result.IsSuccessStatusCode)
                {
                    var newPatient = await result.Content.ReadFromJsonAsync<Patient>();
                    if (newPatient != null)
                    {
                        patients.Insert(0, newPatient);
                        FilterPatients();
                        NotificationService.Notify(NotificationSeverity.Success, "Success", "Patient added successfully!");
                    }
                }
                else
                {
                    var error = await result.Content.ReadAsStringAsync();
                    NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to add patient: " + error);
                }
            }
            else
            {
                var result = await Http.PutAsJsonAsync($"api/patient/{patientForm.Id}", patientForm);
                if (result.IsSuccessStatusCode)
                {
                    var updatedPatient = await result.Content.ReadFromJsonAsync<Patient>();
                    if (updatedPatient != null)
                    {
                        var index = patients.FindIndex(p => p.Id == updatedPatient.Id);
                        if (index >= 0)
                        {
                            patients[index] = updatedPatient;
                            FilterPatients();
                        }
                        NotificationService.Notify(NotificationSeverity.Success, "Success", "Patient updated successfully!");
                    }
                }
                else
                {
                    var error = await result.Content.ReadAsStringAsync();
                    NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to update patient: " + error);
                }
            }
            
            ClosePatientForm();
        }
        catch (Exception ex)
        {
            NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to save patient: " + ex.Message);
        }
        finally
        {
            isSaving = false;
        }
    }

    private void ViewPatientDetails(Patient patient)
    {
        selectedPatient = patient;
        showPatientDetails = true;
    }

    private void ClosePatientDetails()
    {
        showPatientDetails = false;
        selectedPatient = null;
    }

    private async Task ViewPatientStats(Patient patient)
    {
        try
        {
            selectedPatient = patient;
            var response = await Http.GetFromJsonAsync<PatientStats>($"api/patient/{patient.Id}/stats");
            patientStats = response;
            showPatientStats = true;
        }
        catch (Exception ex)
        {
            NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to load patient stats: " + ex.Message);
        }
    }

    private void ClosePatientStats()
    {
        showPatientStats = false;
        selectedPatient = null;
        patientStats = null;
    }

    private async Task DeactivatePatient(Patient patient)
    {
        try
        {
            var result = await Http.DeleteAsync($"api/patient/{patient.Id}");
            if (result.IsSuccessStatusCode)
            {
                patient.IsActive = false;
                FilterPatients();
                NotificationService.Notify(NotificationSeverity.Success, "Success", "Patient deactivated successfully!");
            }
            else
            {
                NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to deactivate patient.");
            }
        }
        catch (Exception ex)
        {
            NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to deactivate patient: " + ex.Message);
        }
    }

    private async Task ReactivatePatient(Patient patient)
    {
        try
        {
            patient.IsActive = true;
            var result = await Http.PutAsJsonAsync($"api/patient/{patient.Id}", patient);
            if (result.IsSuccessStatusCode)
            {
                var updatedPatient = await result.Content.ReadFromJsonAsync<Patient>();
                if (updatedPatient != null)
                {
                    var index = patients.FindIndex(p => p.Id == updatedPatient.Id);
                    if (index >= 0)
                    {
                        patients[index] = updatedPatient;
                        FilterPatients();
                    }
                }
                NotificationService.Notify(NotificationSeverity.Success, "Success", "Patient reactivated successfully!");
            }
            else
            {
                NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to reactivate patient.");
            }
        }
        catch (Exception ex)
        {
            NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to reactivate patient: " + ex.Message);
        }
    }
}
