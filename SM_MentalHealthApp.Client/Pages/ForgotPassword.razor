@page "/forgot-password"
@using SM_MentalHealthApp.Client.Services
@using SM_MentalHealthApp.Shared
@inject HttpClient Http
@inject NavigationManager Navigation
@inject NotificationService NotificationService

<PageTitle>Forgot Password</PageTitle>

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <h2>üîê Forgot Password</h2>
            <p>Enter your email address and we'll send you a link to reset your password</p>
        </div>

        <div class="login-form">
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @errorMessage
                </div>
            }

            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success" role="alert">
                    @successMessage
                </div>
            }

            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email"
                    class="form-control @(string.IsNullOrEmpty(email) && showValidation ? "is-invalid" : "")"
                    @bind="email" placeholder="Enter your email" disabled="@isLoading" />
                @if (string.IsNullOrEmpty(email) && showValidation)
                {
                    <div class="invalid-feedback">Email is required</div>
                }
            </div>

            <div class="form-actions">
                <button type="button" class="btn btn-primary btn-block" @onclick="HandleForgotPassword" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                    }
                    Send Reset Link
                </button>
            </div>

            <div class="text-center mt-3">
                <a href="/login" class="text-muted">Back to Login</a>
            </div>
        </div>
    </div>
</div>

@code {
    private string email = "";
    private bool isLoading = false;
    private bool showValidation = false;
    private string errorMessage = "";
    private string successMessage = "";

    private async Task HandleForgotPassword()
    {
        showValidation = true;
        errorMessage = "";
        successMessage = "";

        if (string.IsNullOrEmpty(email))
        {
            errorMessage = "Please enter your email address";
            return;
        }

        isLoading = true;
        StateHasChanged();

        try
        {
            var request = new ForgotPasswordRequest
            {
                Email = email
            };

            var response = await Http.PostAsJsonAsync("api/auth/forgot-password", request);
            
            if (!response.IsSuccessStatusCode)
            {
                errorMessage = $"Server returned error: {response.StatusCode}. Please try again.";
                return;
            }
            
            var result = await response.Content.ReadFromJsonAsync<ForgotPasswordResponse>();

            if (result != null && result.Success)
            {
                successMessage = result.Message;
                email = ""; // Clear email for security
                showValidation = false; // Hide validation errors when success
            }
            else
            {
                errorMessage = result?.Message ?? "An error occurred. Please try again.";
            }
        }
        catch (HttpRequestException ex)
        {
            errorMessage = $"Network error: Unable to connect to the server. Please check your connection and try again.";
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to send reset link: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
}

