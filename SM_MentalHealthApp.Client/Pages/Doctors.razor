            <div class="modal-footer">
                <button @onclick="CloseDoctorDetails" class="btn btn-secondary">Close</button>
            </div>
        </div>
    </div>
}

@code {
    private List<User> doctors = new();
    private List<Company> companies = new();
    private User? selectedDoctor;
    private bool isLoading = true;
    private bool showDoctorForm = false;
    private bool showDoctorDetails = false;
    private bool isSaving = false;
    private User? editingDoctor;
    private CreateDoctorRequest doctorForm = new();
    private List<int> selectedDoctorExpertiseIds = new();
    
    // Custom filter variables
    private bool? selectedStatusFilter = null;
    
    private readonly List<object> statusOptions = new()
    {
        new { Value = (bool?)null, Text = "All Statuses" },
        new { Value = (bool?)true, Text = "Active" },
        new { Value = (bool?)false, Text = "Inactive" }
    };

    protected override async Task OnInitializedAsync()
    {
        await LoadCompanies();
        await LoadDoctors();
    }

    private async Task LoadCompanies()
    {
        try
        {
            companies = await Http.GetFromJsonAsync<List<Company>>("api/company/active") ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading companies: {ex.Message}");
            NotificationService.Notify(NotificationSeverity.Warning, "Warning", "Failed to load companies list.");
        }
    }

    private async Task LoadDoctors()
    {
        try
        {
            isLoading = true;
            
            if (AuthService.CurrentUser?.RoleId == 3) // Admin
            {
                doctors = await Http.GetFromJsonAsync<List<User>>("api/admin/doctors") ?? new();
            }
            else
            {
                doctors = new(); // No access
            }
            
            // Debug: Check for null doctors
            var nullDoctors = doctors.Where(d => d == null).Count();
            if (nullDoctors > 0)
            {
                Console.WriteLine($"Warning: Found {nullDoctors} null doctors in the list");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading doctors: {ex.Message}");
            NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to load doctors: " + ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    private List<User> GetFilteredDoctors()
    {
        var filtered = doctors.Where(d => d != null && d.RoleId == 2).AsEnumerable(); // Only doctors

        // Apply status filter
        if (selectedStatusFilter.HasValue)
        {
            filtered = filtered.Where(d => d != null && d.IsActive == selectedStatusFilter.Value);
        }


        return filtered.ToList();
    }

    private void ClearFilters()
    {
        selectedStatusFilter = null;
        StateHasChanged();
    }

    private async Task ShowAddDoctorForm()
    {
        editingDoctor = null;
        doctorForm = new CreateDoctorRequest { DateOfBirth = DateTime.Now.AddYears(-30) };
        selectedDoctorExpertiseIds = new List<int>();
        await LoadCompanies(); // Refresh companies list
        showDoctorForm = true;
    }

    private async Task EditDoctor(User doctor)
    {
        if (doctor == null) return;
        
        editingDoctor = doctor;
        _originalDoctor = doctor; // Store original for dirty field detection
        doctorForm = new CreateDoctorRequest
        {
            FirstName = doctor.FirstName ?? string.Empty,
            LastName = doctor.LastName ?? string.Empty,
            Email = doctor.Email ?? string.Empty,
            DateOfBirth = doctor.DateOfBirth,
            Gender = doctor.Gender ?? string.Empty,
            MobilePhone = doctor.MobilePhone ?? string.Empty,
            Specialization = doctor.Specialization ?? string.Empty,
            LicenseNumber = doctor.LicenseNumber ?? string.Empty,
            CompanyId = doctor.CompanyId
        };
        
        // Load current expertise IDs for this doctor
        try
        {
            selectedDoctorExpertiseIds = await ExpertiseService.GetSmeExpertisesAsync(doctor.Id);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading doctor expertises: {ex.Message}");
            selectedDoctorExpertiseIds = new List<int>();
        }
        
        await LoadCompanies(); // Refresh companies list
        showDoctorForm = true;
    }

    private void CloseDoctorForm()
    {
        showDoctorForm = false;
        editingDoctor = null;
        doctorForm = new CreateDoctorRequest();
        selectedDoctorExpertiseIds = new List<int>();
    }

    private async Task SaveDoctor()
    {
        if (string.IsNullOrWhiteSpace(doctorForm.FirstName) || 
            string.IsNullOrWhiteSpace(doctorForm.LastName) || 
            string.IsNullOrWhiteSpace(doctorForm.Email) ||
            string.IsNullOrWhiteSpace(doctorForm.LicenseNumber))
        {
            NotificationService.Notify(NotificationSeverity.Warning, "Validation", "Please fill in all required fields.");
            return;
        }

        if (editingDoctor == null && string.IsNullOrWhiteSpace(doctorForm.Password))
        {
            NotificationService.Notify(NotificationSeverity.Warning, "Validation", "Password is required for new doctors.");
            return;
        }

        try
        {
            isSaving = true;
            
            if (editingDoctor == null)
            {
                // Create new doctor
                var result = await Http.PostAsJsonAsync("api/admin/create-doctor", doctorForm);
                if (result.IsSuccessStatusCode)
                {
                    // Get the created doctor ID from response
                    var response = await result.Content.ReadFromJsonAsync<Dictionary<string, object>>();
                    if (response != null && response.ContainsKey("doctorId") && selectedDoctorExpertiseIds.Any())
                    {
                        var doctorId = Convert.ToInt32(response["doctorId"]);
                        // Update expertise
                        await ExpertiseService.SetSmeExpertisesAsync(doctorId, selectedDoctorExpertiseIds);
                    }
                    
                    NotificationService.Notify(NotificationSeverity.Success, "Success", "Doctor added successfully!");
                    await LoadDoctors(); // Reload the list
                    CloseDoctorForm(); // Only close on success
                }
                else
                {
                    var error = await result.Content.ReadAsStringAsync();
                    NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to add doctor: " + error);
                    // Don't close dialog on error - keep it open so user can fix the issue
                }
            }
            else
            {
                // Update existing doctor - only send changed fields
                var updateRequest = new UpdateDoctorRequest();
                
                // Only include fields that have actually changed
                if (_originalDoctor != null)
                {
                    // Only set properties that have actually changed
                    if (!string.IsNullOrWhiteSpace(doctorForm.FirstName) && doctorForm.FirstName != (_originalDoctor.FirstName ?? string.Empty))
                        updateRequest.FirstName = doctorForm.FirstName;
                    
                    if (!string.IsNullOrWhiteSpace(doctorForm.LastName) && doctorForm.LastName != (_originalDoctor.LastName ?? string.Empty))
                        updateRequest.LastName = doctorForm.LastName;
                    
                    if (!string.IsNullOrWhiteSpace(doctorForm.Email) && doctorForm.Email != (_originalDoctor.Email ?? string.Empty))
                        updateRequest.Email = doctorForm.Email;
                    
                    if (doctorForm.DateOfBirth != _originalDoctor.DateOfBirth)
                        updateRequest.DateOfBirth = doctorForm.DateOfBirth;
                    
                    if (!string.IsNullOrWhiteSpace(doctorForm.Gender) && doctorForm.Gender != (_originalDoctor.Gender ?? string.Empty))
                        updateRequest.Gender = doctorForm.Gender;
                    
                    if (doctorForm.MobilePhone != (_originalDoctor.MobilePhone ?? string.Empty))
                        updateRequest.MobilePhone = doctorForm.MobilePhone;
                    
                    if (!string.IsNullOrWhiteSpace(doctorForm.Specialization) && doctorForm.Specialization != (_originalDoctor.Specialization ?? string.Empty))
                        updateRequest.Specialization = doctorForm.Specialization;
                    
                    if (!string.IsNullOrWhiteSpace(doctorForm.LicenseNumber) && doctorForm.LicenseNumber != (_originalDoctor.LicenseNumber ?? string.Empty))
                        updateRequest.LicenseNumber = doctorForm.LicenseNumber;
                    
                    // CompanyId comparison (nullable int)
                    if (doctorForm.CompanyId != _originalDoctor.CompanyId)
                        updateRequest.CompanyId = doctorForm.CompanyId;
                    
                    // Only include password if provided
                    if (!string.IsNullOrWhiteSpace(doctorForm.Password))
                        updateRequest.Password = doctorForm.Password;
                }

                var result = await Http.PutAsJsonAsync($"api/admin/doctors/{editingDoctor.Id}", updateRequest);
                if (result.IsSuccessStatusCode)
                {
                    // Update expertise
                    if (selectedDoctorExpertiseIds.Any() || editingDoctor != null)
                    {
                        var expertiseResult = await ExpertiseService.SetSmeExpertisesAsync(editingDoctor.Id, selectedDoctorExpertiseIds);
                        if (!expertiseResult)
                        {
                            NotificationService.Notify(NotificationSeverity.Warning, "Warning", "Doctor updated but failed to update expertise. You can try again later.");
                        }
                    }
                    
                    NotificationService.Notify(NotificationSeverity.Success, "Success", "Doctor updated successfully!");
                    await LoadDoctors(); // Reload the list
                    CloseDoctorForm(); // Only close on success
                }
                else
                {
                    var error = await result.Content.ReadAsStringAsync();
                    NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to update doctor: " + error);
                    // Don't close dialog on error - keep it open so user can fix the issue
                }
            }
        }
        catch (Exception ex)
        {
            NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to save doctor: " + ex.Message);
        }
        finally
        {
            isSaving = false;
        }
    }

    private void ViewDoctorDetails(User doctor)
    {
        if (doctor == null) return;
        
        selectedDoctor = doctor;
        showDoctorDetails = true;
    }

    private void CloseDoctorDetails()
    {
        showDoctorDetails = false;
        selectedDoctor = null;
    }

    private async Task DeactivateDoctor(User doctor)
    {
        if (doctor == null) return;
        
        try
        {
            var result = await Http.DeleteAsync($"api/admin/doctors/{doctor.Id}/deactivate");
            if (result.IsSuccessStatusCode)
            {
                doctor.IsActive = false;
                NotificationService.Notify(NotificationSeverity.Success, "Success", "Doctor deactivated successfully!");
            }
            else
            {
                NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to deactivate doctor.");
            }
        }
        catch (Exception ex)
        {
            NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to deactivate doctor: " + ex.Message);
        }
    }

    private async Task ReactivateDoctor(User doctor)
    {
        if (doctor == null) return;
        
        try
        {
            var result = await Http.PostAsync($"api/admin/doctors/{doctor.Id}/reactivate", null);
            if (result.IsSuccessStatusCode)
            {
                doctor.IsActive = true;
                NotificationService.Notify(NotificationSeverity.Success, "Success", "Doctor reactivated successfully!");
            }
            else
            {
                NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to reactivate doctor.");
            }
        }
        catch (Exception ex)
        {
            NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to reactivate doctor: " + ex.Message);
        }
    }

    public class CreateDoctorRequest
    {
        public string FirstName { get; set; } = string.Empty;
        public string LastName { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
        public DateTime DateOfBirth { get; set; }
        public string Gender { get; set; } = string.Empty;
        public string? MobilePhone { get; set; }
        public string Specialization { get; set; } = string.Empty;
        public string LicenseNumber { get; set; } = string.Empty;
        public int? CompanyId { get; set; }
    }

    // Track original values for dirty field detection
    private User? _originalDoctor;

    public class UpdateDoctorRequest
    {
        public string FirstName { get; set; } = string.Empty;
        public string LastName { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
