@page "/admin"
@using SM_MentalHealthApp.Shared
@using SM_MentalHealthApp.Client.Services
@using SM_MentalHealthApp.Client.Components.Grid
@using SM_MentalHealthApp.Client.Helpers
@using System.Net.Http.Json
@inject HttpClient Http
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject ODataService ODataService

<PageTitle>Assignments</PageTitle>

<style>
    .search-controls {
        margin-bottom: 1rem;
    }

    .search-box {
        margin-bottom: 1rem;
    }

    .rz-datagrid {
        border: 1px solid #dee2e6;
        border-radius: 0.375rem;
    }

    .rz-datagrid-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #dee2e6;
    }

    .rz-datagrid-row:hover {
        background-color: #f8f9fa;
    }

    .badge {
        display: inline-block;
        padding: 0.25em 0.4em;
        font-size: 75%;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        white-space: nowrap;
        vertical-align: baseline;
        border-radius: 0.25rem;
    }

    .badge-info {
        color: #fff;
        background-color: #17a2b8;
    }

    .text-muted {
        color: #6c757d !important;
    }

    .mb-3 {
        margin-bottom: 1rem !important;
    }
</style>

<div class="admin-container">
    <div class="admin-header">
        <h1>Assignments</h1>
        <p>Manage client-SME assignments</p>
    </div>

    @if (isLoading)
    {
        <div class="loading-container">
            <div class="loading-spinner"></div>
            <p>Loading...</p>
        </div>
    }
    else
    {
        <div class="admin-content">
            <!-- Assignment Management -->
            <div class="assignment-section">
                <h2>Client-SME Assignments</h2>

                <div class="assignment-controls">
                    <div class="form-group">
                        <label class="form-label">Select Client:</label>
                        <RadzenDropDown Data="@patients.Where(p => p.RoleId == 1)" TextProperty="FullName"
                            ValueProperty="Id" @bind-Value="selectedPatientId" AllowFiltering="true"
                            FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" Placeholder="Choose a client..."
                            Style="width: 400px" />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Select SME:</label>
                        <RadzenDropDown Data="@doctors.Where(d => d.RoleId == 2)" TextProperty="FullName" ValueProperty="Id"
                            @bind-Value="selectedDoctorId" AllowFiltering="true"
                            FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" Placeholder="Choose an SME..."
                            Style="width: 400px" />
                    </div>

                    <div class="button-group">
                        <button class="btn btn-primary" @onclick="AssignPatient"
                            disabled="@(selectedPatientId == 0 || selectedDoctorId == 0)">
                            Assign
                        </button>
                        <button class="btn btn-danger" @onclick="UnassignPatient"
                            disabled="@(selectedPatientId == 0 || selectedDoctorId == 0)">
                            Unassign
                        </button>
                    </div>
                </div>


                @if (!string.IsNullOrEmpty(message))
                {
                    <div class="alert @(isError ? "alert-danger" : "alert-success")">
                        @message
                    </div>
                }
            </div>

            <!-- Current Assignments -->
            <div class="assignments-section">
                <h2>Current Assignments</h2>

                <div class="mb-3">
                    <small class="text-muted">
                        <i class="fas fa-info-circle"></i>
                        Use the filter row below each column header to search and filter assignments.
                        You can filter by client name, SME name, assignment date, or specialization.
                    </small>
                </div>

                <SMDataGrid TItem="AssignmentDisplayModel" 
                    LoadItemsPaged="LoadAssignmentsPagedAsync"
                    AllowPaging="true"
                    PageSize="10" 
                    AllowSorting="true" 
                    FilterMode="FilterMode.Advanced" 
                    ShowPagingSummary="true"
                    EmptyText="No assignments found" 
                    AllowFiltering="true"
                    ShowFilterRow="true"
                    ShowFilterRowButtons="true"
                    @ref="_assignmentsGrid">
                    <Columns>
                        <RadzenDataGridColumn TItem="AssignmentDisplayModel" Property="PatientName" Title="Client"
                            Width="200px" Filterable="true" FilterProperty="PatientName">
                            <Template Context="assignment">
                                <div>
                                    <strong>@assignment.PatientName</strong>
                                    <br />
                                    <small class="text-muted">@assignment.PatientEmail</small>
                                </div>
                            </Template>
                        </RadzenDataGridColumn>

                        <RadzenDataGridColumn TItem="AssignmentDisplayModel" Property="DoctorName" Title="SME"
                            Width="200px" Filterable="true" FilterProperty="DoctorName">
                            <Template Context="assignment">
                                <div>
                                    <strong>@assignment.DoctorName</strong>
                                    <br />
                                    <small class="text-muted">@assignment.DoctorEmail</small>
                                </div>
                            </Template>
                        </RadzenDataGridColumn>

                        <RadzenDataGridColumn TItem="AssignmentDisplayModel" Property="AssignedDate" Title="Assigned Date"
                            Width="150px" Filterable="true" FilterProperty="AssignedDate">
                            <Template Context="assignment">
                                @assignment.AssignedDate.ToString("MMM dd, yyyy")
                            </Template>
                        </RadzenDataGridColumn>

                        <RadzenDataGridColumn TItem="AssignmentDisplayModel" Property="DoctorSpecialization"
                            Title="Specialization" Width="150px" Filterable="true" FilterProperty="DoctorSpecialization">
                            <Template Context="assignment">
                                @if (!string.IsNullOrEmpty(assignment.DoctorSpecialization))
                                {
                                    <span class="badge badge-info">@assignment.DoctorSpecialization</span>
                                }
                                else
                                {
                                    <span class="text-muted">Not specified</span>
                                }
                            </Template>
                        </RadzenDataGridColumn>

                        <RadzenDataGridColumn TItem="AssignmentDisplayModel" Property="Actions" Title="Actions"
                            Width="120px" Sortable="false" Filterable="false">
                            <Template Context="assignment">
                                <RadzenButton Icon="delete" ButtonStyle="ButtonStyle.Danger" ButtonType="ButtonType.Button"
                                    Size="ButtonSize.Small"
                                    Click="@(async () => await UnassignPatientFromGrid(assignment.PatientId, assignment.DoctorId))"
                                    Title="Remove Assignment" />
                            </Template>
                        </RadzenDataGridColumn>
                    </Columns>
                </SMDataGrid>
            </div>

            <!-- SME-Client Overview -->
            <div class="overview-section">
                <h2>SME-Client Overview</h2>

                <div class="search-box mb-3">
                    <RadzenTextBox @bind-Value="doctorSearchTerm" Placeholder="Search doctors by name or email..."
                        Style="width: 100%; max-width: 400px;" />
                </div>

                <div class="overview-grid">
                    @foreach (var doctor in FilteredDoctors)
                    {
                        <div class="doctor-card">
                            <h3>@doctor.FirstName @doctor.LastName</h3>
                            <p class="doctor-specialization">@doctor.Specialization</p>
                            <div class="patient-list">
                                <h4>Assigned Patients:</h4>
                                @{
                                    var doctorPatients = assignments.Where(a => a.AssignerId == doctor.Id).ToList();
                                }
                                @if (doctorPatients.Any())
                                {
                                    <ul>
                                        @foreach (var assignment in doctorPatients)
                                        {
                                            <li>@assignment.Assignee?.FirstName @assignment.Assignee?.LastName</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <p class="no-patients">No patients assigned</p>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<User> patients = new();
    private List<User> doctors = new();
    private List<UserAssignment> assignments = new();
    private int selectedPatientId = 0;
    private int selectedDoctorId = 0;
    private SMDataGrid<AssignmentDisplayModel>? _assignmentsGrid;
    private bool isLoading = true;
    private string message = "";
    private bool isError = false;

    // Search functionality for doctor overview
    private string doctorSearchTerm = string.Empty;


    protected override async Task OnInitializedAsync()
    {
        // Wait for authentication to be initialized
        await AuthService.InitializeAsync();
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            isLoading = true;
            StateHasChanged();


            // Load patients (users with role = Patient)
            var patientsResponse = await Http.GetFromJsonAsync<List<User>>("api/admin/patients");
            patients = patientsResponse ?? new();

            // Load doctors (users with role = Doctor)
            var doctorsResponse = await Http.GetFromJsonAsync<List<User>>("api/admin/doctors");
            doctors = doctorsResponse ?? new();

            // Load assignments
            var assignmentsResponse = await Http.GetFromJsonAsync<List<UserAssignment>>("api/admin/assignments");
            assignments = assignmentsResponse ?? new();

            isLoading = false;
        }
        catch (Exception ex)
        {
            isLoading = false;
            message = $"Error loading data: {ex.Message}";
            isError = true;
        }
    }

    // Filtered properties for search functionality
    private IEnumerable<User> FilteredDoctors =>
    string.IsNullOrWhiteSpace(doctorSearchTerm)
    ? doctors
    : doctors.Where(d =>
    d.FirstName.Contains(doctorSearchTerm, StringComparison.OrdinalIgnoreCase) ||
    d.LastName.Contains(doctorSearchTerm, StringComparison.OrdinalIgnoreCase) ||
    d.Email.Contains(doctorSearchTerm, StringComparison.OrdinalIgnoreCase));


    private async Task<PagedResult<AssignmentDisplayModel>> LoadAssignmentsPagedAsync(int skip, int take, string? orderBy, string? filter, CancellationToken ct)
    {
        try
        {
            // Decode the filter
            var decodedFilter = !string.IsNullOrEmpty(filter) 
                ? System.Net.WebUtility.UrlDecode(filter) 
                : null;

            // Handle PatientName, DoctorName, and DoctorSpecialization filters (computed properties)
            string? odataFilter = null;
            bool hasPatientName = !string.IsNullOrEmpty(decodedFilter) && 
                                 (decodedFilter.Contains("PatientName", StringComparison.OrdinalIgnoreCase));
            bool hasDoctorName = !string.IsNullOrEmpty(decodedFilter) && 
                                (decodedFilter.Contains("DoctorName", StringComparison.OrdinalIgnoreCase));
            bool hasDoctorSpecialization = !string.IsNullOrEmpty(decodedFilter) && 
                                          (decodedFilter.Contains("DoctorSpecialization", StringComparison.OrdinalIgnoreCase));

            if (hasPatientName)
            {
                var patientNameFilter = ExtractNameFilter(decodedFilter!, "PatientName");
                if (!string.IsNullOrEmpty(patientNameFilter))
                {
                    // Find matching patient IDs
                    var patientIds = await FindUserIdsByName(patientNameFilter, 1, ct); // RoleId 1 = Patient
                    if (patientIds.Any())
                    {
                        var patientIdFilter = string.Join(" or ", patientIds.Select(id => $"AssigneeId eq {id}"));
                        odataFilter = $"({patientIdFilter})";
                    }
                    else
                    {
                        // No matching patients, return empty result
                        return new PagedResult<AssignmentDisplayModel>
                        {
                            Items = new List<AssignmentDisplayModel>(),
                            TotalCount = 0,
                            PageNumber = (skip / take) + 1,
                            PageSize = take
                        };
                    }
                }
                decodedFilter = RemoveNameFilter(decodedFilter!, "PatientName");
            }

            if (hasDoctorName)
            {
                var doctorNameFilter = ExtractNameFilter(decodedFilter ?? "", "DoctorName");
                if (!string.IsNullOrEmpty(doctorNameFilter))
                {
                    // Find matching doctor IDs
                    var doctorIds = await FindUserIdsByName(doctorNameFilter, 2, ct); // RoleId 2 = Doctor
                    if (doctorIds.Any())
                    {
                        var doctorIdFilter = string.Join(" or ", doctorIds.Select(id => $"AssignerId eq {id}"));
                        if (!string.IsNullOrEmpty(odataFilter))
                            odataFilter = $"{odataFilter} and ({doctorIdFilter})";
                        else
                            odataFilter = $"({doctorIdFilter})";
                    }
                    else
                    {
                        // No matching doctors, return empty result
                        return new PagedResult<AssignmentDisplayModel>
                        {
                            Items = new List<AssignmentDisplayModel>(),
                            TotalCount = 0,
                            PageNumber = (skip / take) + 1,
                            PageSize = take
                        };
                    }
                }
                decodedFilter = RemoveNameFilter(decodedFilter ?? "", "DoctorName");
            }

            if (hasDoctorSpecialization)
            {
                var specializationFilter = ExtractSpecializationFilter(decodedFilter ?? "");
                if (!string.IsNullOrEmpty(specializationFilter))
                {
                    // Find doctors with this specialization
                    var doctorIds = await FindDoctorIdsBySpecialization(specializationFilter, ct);
                    if (doctorIds.Any())
                    {
                        var doctorIdFilter = string.Join(" or ", doctorIds.Select(id => $"AssignerId eq {id}"));
                        if (!string.IsNullOrEmpty(odataFilter))
                            odataFilter = $"{odataFilter} and ({doctorIdFilter})";
                        else
                            odataFilter = $"({doctorIdFilter})";
                    }
                    else
                    {
                        // No matching doctors, return empty result
                        return new PagedResult<AssignmentDisplayModel>
                        {
                            Items = new List<AssignmentDisplayModel>(),
                            TotalCount = 0,
                            PageNumber = (skip / take) + 1,
                            PageSize = take
                        };
                    }
                }
                decodedFilter = RemoveSpecializationFilter(decodedFilter ?? "");
            }

            // Clean up any leftover operators
            if (!string.IsNullOrEmpty(decodedFilter))
            {
                decodedFilter = CleanupFilterOperators(decodedFilter);
            }

            // Transform remaining filter to OData syntax
            // First, replace AssignedDate with AssignedAt (the actual OData property name)
            string? transformedFilter = null;
            if (!string.IsNullOrWhiteSpace(decodedFilter))
            {
                // Replace AssignedDate with AssignedAt before transformation
                var filterForTransformation = decodedFilter.Replace("AssignedDate", "AssignedAt", StringComparison.OrdinalIgnoreCase);
                transformedFilter = ODataFilterHelper.TransformToOData(filterForTransformation);
            }

            // Combine filters
            if (!string.IsNullOrEmpty(transformedFilter))
            {
                if (!string.IsNullOrEmpty(odataFilter))
                    odataFilter = $"{odataFilter} and ({transformedFilter})";
                else
                    odataFilter = transformedFilter;
            }

            // Transform orderBy to remove PatientName/DoctorName/DoctorSpecialization (we'll sort client-side)
            // Also replace AssignedDate with AssignedAt (the actual OData property name)
            string? transformedOrderBy = null;
            bool needsClientSort = false;
            string? clientSortProperty = null;
            bool isDescending = false;
            
            if (!string.IsNullOrEmpty(orderBy))
            {
                // Replace AssignedDate with AssignedAt before processing
                var orderByForProcessing = orderBy.Replace("AssignedDate", "AssignedAt", StringComparison.OrdinalIgnoreCase);
                
                if (orderBy.Contains("PatientName", StringComparison.OrdinalIgnoreCase))
                {
                    needsClientSort = true;
                    clientSortProperty = "PatientName";
                    isDescending = orderBy.Contains("desc", StringComparison.OrdinalIgnoreCase);
                    transformedOrderBy = RemovePropertyFromOrderBy(orderByForProcessing, "PatientName");
                }
                else if (orderBy.Contains("DoctorName", StringComparison.OrdinalIgnoreCase))
                {
                    needsClientSort = true;
                    clientSortProperty = "DoctorName";
                    isDescending = orderBy.Contains("desc", StringComparison.OrdinalIgnoreCase);
                    transformedOrderBy = RemovePropertyFromOrderBy(orderByForProcessing, "DoctorName");
                }
                else if (orderBy.Contains("DoctorSpecialization", StringComparison.OrdinalIgnoreCase))
                {
                    needsClientSort = true;
                    clientSortProperty = "DoctorSpecialization";
                    isDescending = orderBy.Contains("desc", StringComparison.OrdinalIgnoreCase);
                    transformedOrderBy = RemovePropertyFromOrderBy(orderByForProcessing, "DoctorSpecialization");
                }
                else
                {
                    transformedOrderBy = orderByForProcessing;
                }
            }

            // Query OData endpoint
            var result = await ODataService.QueryAsync<UserAssignment>(
                "UserAssignments",
                skip,
                take,
                transformedOrderBy,
                string.IsNullOrEmpty(odataFilter) ? null : odataFilter,
                ct
            );

            // Map UserAssignment to AssignmentDisplayModel
            var items = result.Items.Select(ua => MapAssignmentToDisplayModel(ua)).ToList();

            // Client-side sort if needed
            if (needsClientSort && !string.IsNullOrEmpty(clientSortProperty))
            {
                if (clientSortProperty == "PatientName")
                {
                    items = isDescending
                        ? items.OrderByDescending(a => a.PatientName).ToList()
                        : items.OrderBy(a => a.PatientName).ToList();
                }
                else if (clientSortProperty == "DoctorName")
                {
                    items = isDescending
                        ? items.OrderByDescending(a => a.DoctorName).ToList()
                        : items.OrderBy(a => a.DoctorName).ToList();
                }
                else if (clientSortProperty == "DoctorSpecialization")
                {
                    items = isDescending
                        ? items.OrderByDescending(a => a.DoctorSpecialization ?? "").ToList()
                        : items.OrderBy(a => a.DoctorSpecialization ?? "").ToList();
                }
            }

            return new PagedResult<AssignmentDisplayModel>
            {
                Items = items,
                TotalCount = result.TotalCount,
                PageNumber = result.PageNumber,
                PageSize = result.PageSize
            };
        }
        catch (Exception ex)
        {
            return new PagedResult<AssignmentDisplayModel>
            {
                Items = new List<AssignmentDisplayModel>(),
                TotalCount = 0,
                PageNumber = 1,
                PageSize = 10
            };
        }
    }

    private AssignmentDisplayModel MapAssignmentToDisplayModel(UserAssignment ua)
    {
        var model = new AssignmentDisplayModel
        {
            PatientId = ua.AssigneeId,
            PatientName = $"{ua.Assignee?.FirstName} {ua.Assignee?.LastName}".Trim(),
            PatientEmail = ua.Assignee?.Email ?? "",
            DoctorId = ua.AssignerId,
            DoctorName = $"{ua.Assigner?.FirstName} {ua.Assigner?.LastName}".Trim(),
            DoctorEmail = ua.Assigner?.Email ?? "",
            DoctorSpecialization = ua.Assigner?.Specialization,
            AssignedDate = ua.AssignedAt
        };
        
        return model;
    }

    private string? ExtractNameFilter(string filter, string propertyName)
    {
        // Extract search term from Radzen-generated filters like:
        // (PatientName == null ? "" : PatientName).ToLower().Contains("dr".ToLower())
        // or: PatientName.ToLower().Contains("dr".ToLower())
        
        // Try multiple patterns to match Radzen's filter format
        // Pattern 1: (PropertyName == null ? "" : PropertyName).ToLower().Contains("value".ToLower())
        var pattern1 = $@"\({propertyName}\s*==\s*null\s*\?\s*""""\s*:\s*{propertyName}\)\s*\.\s*ToLower\s*\(\s*\)\s*\.\s*Contains\s*\(\s*[""']([^""']+)[""']";
        var match1 = System.Text.RegularExpressions.Regex.Match(filter, pattern1, System.Text.RegularExpressions.RegexOptions.IgnoreCase);
        if (match1.Success)
        {
            var value = match1.Groups[1].Value;
            return value;
        }
        
        // Pattern 2: PropertyName.ToLower().Contains("value".ToLower())
        var pattern2 = $@"{propertyName}\s*\.\s*ToLower\s*\(\s*\)\s*\.\s*Contains\s*\(\s*[""']([^""']+)[""']";
        var match2 = System.Text.RegularExpressions.Regex.Match(filter, pattern2, System.Text.RegularExpressions.RegexOptions.IgnoreCase);
        if (match2.Success)
        {
            var value = match2.Groups[1].Value;
            return value;
        }
        
        // Pattern 3: (PropertyName == null ? "" : PropertyName).ToLower.Contains("value".ToLower)
        var pattern3 = $@"\({propertyName}\s*==\s*null\s*\?\s*""""\s*:\s*{propertyName}\)\s*\.\s*ToLower\s*\.\s*Contains\s*\(\s*[""']([^""']+)[""']";
        var match3 = System.Text.RegularExpressions.Regex.Match(filter, pattern3, System.Text.RegularExpressions.RegexOptions.IgnoreCase);
        if (match3.Success)
        {
            var value = match3.Groups[1].Value;
            return value;
        }
        
        // Pattern 4: PropertyName.ToLower.Contains("value".ToLower)
        var pattern4 = $@"{propertyName}\s*\.\s*ToLower\s*\.\s*Contains\s*\(\s*[""']([^""']+)[""']";
        var match4 = System.Text.RegularExpressions.Regex.Match(filter, pattern4, System.Text.RegularExpressions.RegexOptions.IgnoreCase);
        if (match4.Success)
        {
            var value = match4.Groups[1].Value;
            return value;
        }
        
        return null;
    }

    private string RemoveNameFilter(string filter, string propertyName)
    {
        // Remove the propertyName filter clause
        // Pattern: (PropertyName == null ? "" : PropertyName).ToLower().Contains("value".ToLower())
        // or: PropertyName.ToLower().Contains("value".ToLower())
        var pattern = $@"\(?\s*{propertyName}\s*[=!]=\s*null\s*\?\s*""""\s*:\s*{propertyName}\s*\)?\s*\.\s*ToLower\s*\(\s*\)\s*\.\s*Contains\s*\([^)]+\)|{propertyName}\s*\.\s*ToLower\s*\(\s*\)\s*\.\s*Contains\s*\([^)]+\)";
        var result = System.Text.RegularExpressions.Regex.Replace(filter, pattern, "", System.Text.RegularExpressions.RegexOptions.IgnoreCase);
        
        // Clean up operators
        result = System.Text.RegularExpressions.Regex.Replace(result, @"\s+and\s+and\s+", " and ", System.Text.RegularExpressions.RegexOptions.IgnoreCase);
        result = System.Text.RegularExpressions.Regex.Replace(result, @"\s+or\s+or\s+", " or ", System.Text.RegularExpressions.RegexOptions.IgnoreCase);
        result = result.Trim().TrimStart('(').TrimEnd(')');
        
        return result;
    }

    private string? RemovePropertyFromOrderBy(string orderBy, string propertyName)
    {
        // Remove propertyName from orderBy string
        // Pattern: "PatientName asc" or "PatientName desc" or "PatientName, OtherProperty asc"
        var result = System.Text.RegularExpressions.Regex.Replace(orderBy, $@"{propertyName}\s+(asc|desc),?\s*", "", System.Text.RegularExpressions.RegexOptions.IgnoreCase);
        result = System.Text.RegularExpressions.Regex.Replace(result, $@",\s*{propertyName}\s+(asc|desc)", "", System.Text.RegularExpressions.RegexOptions.IgnoreCase);
        result = result.Trim().TrimStart(',').TrimEnd(',');
        
        if (string.IsNullOrWhiteSpace(result))
            return null;
            
        return result;
    }

    private async Task<List<int>> FindUserIdsByName(string searchTerm, int? roleId, CancellationToken ct)
    {
        try
        {
            // Build filter for Users OData endpoint
            var filter = $"(contains(FirstName, '{searchTerm}') or contains(LastName, '{searchTerm}') or contains(Email, '{searchTerm}'))";
            if (roleId.HasValue)
            {
                filter = $"RoleId eq {roleId.Value} and ({filter})";
            }

            var result = await ODataService.QueryAsync<User>(
                "Users",
                0,
                1000, // Get up to 1000 matching users
                null,
                filter,
                ct
            );

            return result.Items.Select(u => u.Id).ToList();
        }
        catch (Exception ex)
        {
            return new List<int>();
        }
    }

    private string? ExtractSpecializationFilter(string filter)
    {
        // Extract specialization value from Radzen-generated filters like:
        // (DoctorSpecialization == null ? "" : DoctorSpecialization).ToLower().Contains("psychiatry".ToLower())
        // or: DoctorSpecialization.ToLower().Contains("psychiatry".ToLower())
        // or: DoctorSpecialization == "Psychiatry"
        var pattern = @"DoctorSpecialization\s*[=!]=\s*null\s*\?\s*""""\s*:\s*DoctorSpecialization|DoctorSpecialization";
        var match = System.Text.RegularExpressions.Regex.Match(filter, pattern, System.Text.RegularExpressions.RegexOptions.IgnoreCase);
        if (match.Success)
        {
            // Try Contains pattern first
            var containsPattern = @"Contains\s*\(\s*[""']([^""']+)[""']";
            var containsMatch = System.Text.RegularExpressions.Regex.Match(filter, containsPattern, System.Text.RegularExpressions.RegexOptions.IgnoreCase);
            if (containsMatch.Success)
            {
                return containsMatch.Groups[1].Value;
            }
            
            // Try equality pattern: DoctorSpecialization == "value"
            var eqPattern = @"DoctorSpecialization\s*==\s*[""']([^""']+)[""']";
            var eqMatch = System.Text.RegularExpressions.Regex.Match(filter, eqPattern, System.Text.RegularExpressions.RegexOptions.IgnoreCase);
            if (eqMatch.Success)
            {
                return eqMatch.Groups[1].Value;
            }
        }
        return null;
    }

    private string RemoveSpecializationFilter(string filter)
    {
        // Remove the DoctorSpecialization filter clause
        var pattern = @"\(?\s*DoctorSpecialization\s*[=!]=\s*null\s*\?\s*""""\s*:\s*DoctorSpecialization\s*\)?\s*\.\s*ToLower\s*\(\s*\)\s*\.\s*Contains\s*\([^)]+\)|DoctorSpecialization\s*\.\s*ToLower\s*\(\s*\)\s*\.\s*Contains\s*\([^)]+\)|DoctorSpecialization\s*==\s*[""'][^""']+[""']";
        var result = System.Text.RegularExpressions.Regex.Replace(filter, pattern, "", System.Text.RegularExpressions.RegexOptions.IgnoreCase);
        
        // Clean up operators
        result = System.Text.RegularExpressions.Regex.Replace(result, @"\s+and\s+and\s+", " and ", System.Text.RegularExpressions.RegexOptions.IgnoreCase);
        result = System.Text.RegularExpressions.Regex.Replace(result, @"\s+or\s+or\s+", " or ", System.Text.RegularExpressions.RegexOptions.IgnoreCase);
        result = result.Trim().TrimStart('(').TrimEnd(')');
        
        return result;
    }

    private async Task<List<int>> FindDoctorIdsBySpecialization(string specialization, CancellationToken ct)
    {
        try
        {
            // Build filter for Users OData endpoint to find doctors with this specialization
            var filter = $"RoleId eq 2 and contains(Specialization, '{specialization}')";

            var result = await ODataService.QueryAsync<User>(
                "Users",
                0,
                1000, // Get up to 1000 matching doctors
                null,
                filter,
                ct
            );

            return result.Items.Select(u => u.Id).ToList();
        }
        catch (Exception ex)
        {
            return new List<int>();
        }
    }

    private string CleanupFilterOperators(string filter)
    {
        if (string.IsNullOrWhiteSpace(filter))
            return filter;

        // Remove leftover "and", "or" operators
        var result = System.Text.RegularExpressions.Regex.Replace(filter, @"^\s*(and|or)\s+", "", System.Text.RegularExpressions.RegexOptions.IgnoreCase);
        result = System.Text.RegularExpressions.Regex.Replace(result, @"\s+(and|or)\s+$", "", System.Text.RegularExpressions.RegexOptions.IgnoreCase);
        result = System.Text.RegularExpressions.Regex.Replace(result, @"\s+(and|or)\s+(and|or)\s+", " ", System.Text.RegularExpressions.RegexOptions.IgnoreCase);
        
        // Remove empty parentheses
        result = System.Text.RegularExpressions.Regex.Replace(result, @"\(\s*\)", "", System.Text.RegularExpressions.RegexOptions.IgnoreCase);
        result = System.Text.RegularExpressions.Regex.Replace(result, @"\(\s*and\s*\)", "", System.Text.RegularExpressions.RegexOptions.IgnoreCase);
        result = System.Text.RegularExpressions.Regex.Replace(result, @"\(\s*or\s*\)", "", System.Text.RegularExpressions.RegexOptions.IgnoreCase);
        
        // Trim and clean up
        result = result.Trim();
        
        // Check if result is only operators
        if (IsOnlyOperators(result))
            return string.Empty;
            
        return result;
    }

    private bool IsOnlyOperators(string filter)
    {
        if (string.IsNullOrWhiteSpace(filter))
            return true;
            
        // Check if filter contains only "and", "or", parentheses, and whitespace
        var cleaned = System.Text.RegularExpressions.Regex.Replace(filter, @"\s*(and|or|\(|\))\s*", "", System.Text.RegularExpressions.RegexOptions.IgnoreCase);
        return string.IsNullOrWhiteSpace(cleaned);
    }

