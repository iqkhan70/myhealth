@page "/admin"
@using SM_MentalHealthApp.Shared
@using SM_MentalHealthApp.Client.Services
@using SM_MentalHealthApp.Client.Components.Grid
@using SM_MentalHealthApp.Client.Components
@using SM_MentalHealthApp.Client.Helpers
@using System.Net.Http.Json
@inject HttpClient Http
@inject IAuthService AuthService
@inject IServiceRequestService ServiceRequestService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject ODataService ODataService
@inject NotificationService NotificationService

<PageTitle>Assignments</PageTitle>

<style>
    .search-controls {
        margin-bottom: 1rem;
    }

    .search-box {
        margin-bottom: 1rem;
    }

    .rz-datagrid {
        border: 1px solid #dee2e6;
        border-radius: 0.375rem;
    }

    .rz-datagrid-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #dee2e6;
    }

    .rz-datagrid-row:hover {
        background-color: #f8f9fa;
    }

    .badge {
        display: inline-block;
        padding: 0.25em 0.4em;
        font-size: 75%;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        white-space: nowrap;
        vertical-align: baseline;
        border-radius: 0.25rem;
    }

    .badge-info {
        color: #fff;
        background-color: #17a2b8;
    }

    .text-muted {
        color: #6c757d !important;
    }

    .mb-3 {
        margin-bottom: 1rem !important;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        margin-bottom: 1rem;
    }

    .form-label {
        margin-bottom: 0.5rem;
        min-width: 250px;
    }
</style>

<div class="admin-container">
    <div class="admin-header">
        <h1>Assignments</h1>
        <p>Manage client-SME assignments</p>
    </div>

    @if (isLoading)
    {
        <div class="loading-container">
            <div class="loading-spinner"></div>
            <p>Loading...</p>
        </div>
    }
    else
    {
        <div class="admin-content">
            <!-- Assignment Management -->
            <div class="assignment-section">
                <h2>Service Request - SME Assignments</h2>
                <p class="text-muted mb-3">
                    <i class="fas fa-info-circle"></i>
                    Assign SMEs to specific Service Requests. Each Service Request can have its own assigned SME, allowing multiple SMEs to work on different requests for the same client.
                </p>

                <div class="assignment-controls">
                    <div class="form-group">
                        <label class="form-label" style="user-select: none;">Select Client:</label>
                        <RadzenDropDown Data="@patients.Where(p => p.RoleId == 1)" TextProperty="FullName"
                            ValueProperty="Id" Value="@selectedPatientId" ValueChanged="@((int? value) => OnClientSelected(value))" AllowFiltering="true"
                            FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" Placeholder="Choose a client..."
                            Style="width: 380px" TValue="int?" AllowClear="true" />
                    </div>

                    <div class="form-group">
                        <label class="form-label" style="user-select: none;">Select or Create Service Request:</label>
                        <div style="display: flex; align-items: center; gap: 8px;">
                            <RadzenDropDown Data="@availableServiceRequests" TextProperty="Title" ValueProperty="Id"
                                @bind-Value="selectedServiceRequestId" AllowFiltering="true"
                                FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" 
                                Placeholder="@(selectedPatientId == null || selectedPatientId == 0 ? "Select a client first..." : "Choose a service request...")"
                                Style="width: 380px; flex-shrink: 0;"
                                AllowClear="true">
                                <Template Context="sr">
                                    <div>
                                        <strong>@sr.Title</strong>
                                        <br />
                                        <small class="text-muted">@sr.Type - @sr.Status</small>
                                    </div>
                                </Template>
                            </RadzenDropDown>
                            @if (selectedPatientId.HasValue && selectedPatientId.Value > 0)
                            {
                                <button class="btn btn-sm btn-outline-primary" style="flex-shrink: 0; white-space: nowrap; padding: 0.25rem 0.5rem; font-size: 0.875rem; height: 38px;" @onclick="ShowCreateServiceRequestDialog">
                                    <i class="fas fa-plus"></i> Create New
                                </button>
                            }
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label" style="user-select: none;">Select SME:</label>
                        <RadzenDropDown Data="@doctors.Where(d => d.RoleId == 2 || d.RoleId == 5)" TextProperty="FullName" ValueProperty="Id"
                            @bind-Value="selectedDoctorId" AllowFiltering="true"
                            FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" Placeholder="Choose an SME..."
                            Style="width: 380px" TValue="int?" AllowClear="true" />
                    </div>

                    <div class="button-group">
                        <button class="btn btn-primary" @onclick="AssignSmeToServiceRequest"
                            disabled="@(selectedServiceRequestId == null || selectedDoctorId == null || selectedDoctorId == 0)">
                            Assign SME to Service Request
                        </button>
                        <button class="btn btn-danger" @onclick="UnassignSmeFromServiceRequest"
                            disabled="@(selectedServiceRequestId == null || selectedDoctorId == null || selectedDoctorId == 0)">
                            Unassign
                        </button>
                    </div>
                </div>


                @if (!string.IsNullOrEmpty(message))
                {
                    <div class="alert @(isError ? "alert-danger" : "alert-success")">
                        @message
                    </div>
                }
            </div>

            <!-- Create Service Request Dialog -->
            @if (showCreateServiceRequestDialog)
            {
                <div class="modal" style="display: block; background: rgba(0,0,0,0.5);">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Create New Service Request</h5>
                                <button type="button" class="btn-close" @onclick="() => showCreateServiceRequestDialog = false"></button>
                            </div>
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label class="form-label">Title <span class="text-danger">*</span></label>
                                    <RadzenTextBox @bind-Value="newServiceRequestTitle" Placeholder="Enter service request title..." Style="width: 100%" />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Type</label>
                                    @{
                                        var serviceRequestTypes = new[] { "General", "Medical", "Legal", "Therapy", "Other" };
                                    }
                                    <RadzenDropDown Data="@serviceRequestTypes" 
                                        @bind-Value="newServiceRequestType" Style="width: 100%" />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Description</label>
                                    <RadzenTextArea @bind-Value="newServiceRequestDescription" Placeholder="Enter description (optional)..." Rows="3" Style="width: 100%" />
                                </div>
                                @if (selectedDoctorId.HasValue && selectedDoctorId.Value > 0)
                                {
                                    <div class="alert alert-info">
                                        <i class="fas fa-info-circle"></i>
                                        The selected SME will be automatically assigned to this Service Request.
                                    </div>
                                }
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" @onclick="() => showCreateServiceRequestDialog = false">Cancel</button>
                                <button type="button" class="btn btn-primary" @onclick="CreateServiceRequest" 
                                    disabled="@string.IsNullOrWhiteSpace(newServiceRequestTitle)">
                                    Create Service Request
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Current Assignments -->
            <div class="assignments-section">
                <h2>Current Assignments</h2>

                <div class="mb-3">
                    <small class="text-muted">
                        <i class="fas fa-info-circle"></i>
                        Use the filter row below each column header to search and filter assignments.
                        You can filter by client name, SME name, assignment date, or specialization.
                    </small>
                </div>

                <SMDataGrid TItem="AssignmentDisplayModel" 
                    LoadItemsPaged="LoadAssignmentsPagedAsync"
                    AllowPaging="true"
                    PageSize="10" 
                    AllowSorting="true" 
                    FilterMode="FilterMode.Advanced" 
                    ShowPagingSummary="true"
                    EmptyText="No assignments found" 
                    AllowFiltering="true"
                    ShowFilterRow="true"
                    ShowFilterRowButtons="true"
                    @ref="_assignmentsGrid">
                    <Columns>
                        <RadzenDataGridColumn TItem="AssignmentDisplayModel" Property="ServiceRequestTitle" Title="Service Request"
                            Width="200px" Filterable="true" FilterProperty="ServiceRequestTitle">
                            <Template Context="assignment">
                                <div>
                                    <strong>@assignment.ServiceRequestTitle</strong>
                                    <br />
                                    <small class="text-muted">@assignment.ServiceRequestType - @assignment.ServiceRequestStatus</small>
                                </div>
                            </Template>
                        </RadzenDataGridColumn>

                        <RadzenDataGridColumn TItem="AssignmentDisplayModel" Property="ClientName" Title="Client"
                            Width="200px" Filterable="true" FilterProperty="ClientName">
                            <Template Context="assignment">
                                <div>
                                    <strong>@assignment.ClientName</strong>
                                    <br />
                                    <small class="text-muted">@assignment.ClientEmail</small>
                                </div>
                            </Template>
                        </RadzenDataGridColumn>

                        <RadzenDataGridColumn TItem="AssignmentDisplayModel" Property="SmeUserName" Title="SME"
                            Width="200px" Filterable="true" FilterProperty="SmeUserName">
                            <Template Context="assignment">
                                <div>
                                    <strong>@assignment.SmeUserName</strong>
                                    <br />
                                    <small class="text-muted">@assignment.SmeUserEmail</small>
                                </div>
                            </Template>
                        </RadzenDataGridColumn>

                        <RadzenDataGridColumn TItem="AssignmentDisplayModel" Property="AssignedDate" Title="Assigned Date"
                            Width="150px" Filterable="true" FilterProperty="AssignedDate">
                            <Template Context="assignment">
                                @assignment.AssignedDate.ToString("MMM dd, yyyy")
                            </Template>
                        </RadzenDataGridColumn>

                        <RadzenDataGridColumn TItem="AssignmentDisplayModel" Property="SmeUserSpecialization"
                            Title="Specialization" Width="150px" Filterable="true" FilterProperty="SmeUserSpecialization">
                            <Template Context="assignment">
                                @if (!string.IsNullOrEmpty(assignment.SmeUserSpecialization))
                                {
                                    <span class="badge badge-info">@assignment.SmeUserSpecialization</span>
                                }
                                else
                                {
                                    <span class="text-muted">Not specified</span>
                                }
                            </Template>
                        </RadzenDataGridColumn>

                        <RadzenDataGridColumn TItem="AssignmentDisplayModel" Property="Actions" Title="Actions"
                            Width="120px" Sortable="false" Filterable="false">
                            <Template Context="assignment">
                                <RadzenButton Icon="delete" ButtonStyle="ButtonStyle.Danger" ButtonType="ButtonType.Button"
                                    Size="ButtonSize.Small"
                                    Click="@(async () => await UnassignSmeFromGrid(assignment.ServiceRequestId, assignment.SmeUserId))"
                                    Title="Remove Assignment" />
                            </Template>
                        </RadzenDataGridColumn>
                    </Columns>
                </SMDataGrid>
            </div>

            <!-- SME-Client Overview -->
            <div class="overview-section">
                <h2>SME-Client Overview</h2>

                <div class="search-box mb-3">
                    <RadzenTextBox @bind-Value="doctorSearchTerm" Placeholder="Search doctors by name or email..."
                        Style="width: 100%; max-width: 400px;" />
                </div>

                <div class="overview-grid">
                    @foreach (var doctor in FilteredDoctors)
                    {
                        <div class="doctor-card">
                            <h3>@doctor.FirstName @doctor.LastName</h3>
                            <p class="doctor-specialization">@doctor.Specialization</p>
                            <div class="patient-list">
                                <h4>Assigned Patients:</h4>
                                @{
                                    var doctorPatients = assignments.Where(a => a.AssignerId == doctor.Id).ToList();
                                }
                                @if (doctorPatients.Any())
                                {
                                    <ul>
                                        @foreach (var assignment in doctorPatients)
                                        {
                                            <li>@assignment.Assignee?.FirstName @assignment.Assignee?.LastName</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <p class="no-patients">No patients assigned</p>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<User> patients = new();
    private List<User> doctors = new();
    private List<UserAssignment> assignments = new();
    private int? selectedPatientId = null;
    private int? selectedServiceRequestId;
    private int? selectedDoctorId = null;
    private SMDataGrid<AssignmentDisplayModel>? _assignmentsGrid;
    private bool isLoading = true;
    private string message = "";
    private bool isError = false;
    private List<ServiceRequestDto> availableServiceRequests = new();
    private bool showCreateServiceRequestDialog = false;
    private string newServiceRequestTitle = "";
    private string newServiceRequestType = "General";
    private string newServiceRequestDescription = "";

    // Search functionality for doctor overview
    private string doctorSearchTerm = string.Empty;


    protected override async Task OnInitializedAsync()
    {
        // Wait for authentication to be initialized
        await AuthService.InitializeAsync();
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            isLoading = true;
            StateHasChanged();


            // Load patients (users with role = Patient)
            var patientsResponse = await Http.GetFromJsonAsync<List<User>>("api/admin/patients");
            patients = patientsResponse ?? new();

            // Load doctors (users with role = Doctor)
            var doctorsResponse = await Http.GetFromJsonAsync<List<User>>("api/admin/doctors");
            doctors = doctorsResponse ?? new();

            // Load assignments
            var assignmentsResponse = await Http.GetFromJsonAsync<List<UserAssignment>>("api/admin/assignments");
            assignments = assignmentsResponse ?? new();

            isLoading = false;
        }
        catch (Exception ex)
        {
            isLoading = false;
            message = $"Error loading data: {ex.Message}";
            isError = true;
        }
    }

    // Filtered properties for search functionality
    private IEnumerable<User> FilteredDoctors =>
    string.IsNullOrWhiteSpace(doctorSearchTerm)
    ? doctors
    : doctors.Where(d =>
    d.FirstName.Contains(doctorSearchTerm, StringComparison.OrdinalIgnoreCase) ||
    d.LastName.Contains(doctorSearchTerm, StringComparison.OrdinalIgnoreCase) ||
    d.Email.Contains(doctorSearchTerm, StringComparison.OrdinalIgnoreCase));


    private async Task<PagedResult<AssignmentDisplayModel>> LoadAssignmentsPagedAsync(int skip, int take, string? orderBy, string? filter, CancellationToken ct)
    {
        try
        {
            // Load all ServiceRequests with their assignments
            var allServiceRequests = await ServiceRequestService.GetServiceRequestsAsync();
            
            // Get all unique user IDs (clients and SMEs)
            var clientIds = allServiceRequests.Select(sr => sr.ClientId).Distinct().ToList();
            var smeUserIds = allServiceRequests.SelectMany(sr => sr.Assignments.Select(a => a.SmeUserId)).Distinct().ToList();
            var allUserIds = clientIds.Concat(smeUserIds).Distinct().ToList();
            
            // Load user details in parallel
            var allUsers = new Dictionary<int, User>();
            var userLoadTasks = allUserIds.Select(async userId =>
            {
                try
                {
                    var user = await Http.GetFromJsonAsync<User>($"api/admin/users/{userId}");
                    if (user != null)
                    {
                        allUsers[userId] = user;
                    }
                }
                catch { }
            });
            await Task.WhenAll(userLoadTasks);
            
            // Flatten ServiceRequests and their assignments into AssignmentDisplayModel
            var allAssignments = new List<AssignmentDisplayModel>();
            
            foreach (var sr in allServiceRequests)
            {
                var client = allUsers.GetValueOrDefault(sr.ClientId);
                foreach (var assignment in sr.Assignments.Where(a => a.IsActive))
                {
                    var sme = allUsers.GetValueOrDefault(assignment.SmeUserId);
                    allAssignments.Add(new AssignmentDisplayModel
                    {
                        ServiceRequestId = sr.Id,
                        ServiceRequestTitle = sr.Title,
                        ServiceRequestType = sr.Type ?? "General",
                        ServiceRequestStatus = sr.Status,
                        ClientId = sr.ClientId,
                        ClientName = client != null ? $"{client.FirstName} {client.LastName}" : sr.ClientName,
                        ClientEmail = client?.Email ?? "",
                        SmeUserId = assignment.SmeUserId,
                        SmeUserName = sme != null ? $"{sme.FirstName} {sme.LastName}" : assignment.SmeUserName,
                        SmeUserEmail = sme?.Email ?? "",
                        SmeUserSpecialization = sme?.Specialization ?? "",
                        AssignedDate = assignment.AssignedAt
                    });
                }
            }
            
            // Apply client-side filtering if needed
            // TODO: Implement filter parsing for ServiceRequest assignments
            
            // Apply sorting
            if (!string.IsNullOrEmpty(orderBy))
            {
                if (orderBy.Contains("ServiceRequestTitle", StringComparison.OrdinalIgnoreCase))
                {
                    allAssignments = orderBy.Contains("desc", StringComparison.OrdinalIgnoreCase)
                        ? allAssignments.OrderByDescending(a => a.ServiceRequestTitle).ToList()
                        : allAssignments.OrderBy(a => a.ServiceRequestTitle).ToList();
                }
                else if (orderBy.Contains("ClientName", StringComparison.OrdinalIgnoreCase))
                {
                    allAssignments = orderBy.Contains("desc", StringComparison.OrdinalIgnoreCase)
                        ? allAssignments.OrderByDescending(a => a.ClientName).ToList()
                        : allAssignments.OrderBy(a => a.ClientName).ToList();
                }
                else if (orderBy.Contains("SmeUserName", StringComparison.OrdinalIgnoreCase))
                {
                    allAssignments = orderBy.Contains("desc", StringComparison.OrdinalIgnoreCase)
                        ? allAssignments.OrderByDescending(a => a.SmeUserName).ToList()
                        : allAssignments.OrderBy(a => a.SmeUserName).ToList();
                }
                else if (orderBy.Contains("AssignedDate", StringComparison.OrdinalIgnoreCase))
                {
                    allAssignments = orderBy.Contains("desc", StringComparison.OrdinalIgnoreCase)
                        ? allAssignments.OrderByDescending(a => a.AssignedDate).ToList()
                        : allAssignments.OrderBy(a => a.AssignedDate).ToList();
                }
            }
            
            // Apply paging
            var totalCount = allAssignments.Count;
            var pagedItems = allAssignments.Skip(skip).Take(take).ToList();
            
            return new PagedResult<AssignmentDisplayModel>
            {
                Items = pagedItems,
                TotalCount = totalCount,
                PageNumber = (skip / take) + 1,
                PageSize = take
            };
        }
        catch (Exception ex)
        {
            NotificationService.ShowError($"Error loading assignments: {ex.Message}");
            return new PagedResult<AssignmentDisplayModel>
            {
                Items = new List<AssignmentDisplayModel>(),
                TotalCount = 0,
                PageNumber = 1,
                PageSize = take
            };
        }
    }

    // Legacy method - keeping for backward compatibility but not used
    private async Task<PagedResult<AssignmentDisplayModel>> LoadAssignmentsPagedAsync_OLD(int skip, int take, string? orderBy, string? filter, CancellationToken ct)
    {
        try
        {
            // Decode the filter
            var decodedFilter = !string.IsNullOrEmpty(filter) 
                ? System.Net.WebUtility.UrlDecode(filter) 
                : null;

            // Handle PatientName, DoctorName, and DoctorSpecialization filters (computed properties)
            string? odataFilter = null;
            bool hasPatientName = !string.IsNullOrEmpty(decodedFilter) && 
                                 (decodedFilter.Contains("PatientName", StringComparison.OrdinalIgnoreCase));
            bool hasDoctorName = !string.IsNullOrEmpty(decodedFilter) && 
                                (decodedFilter.Contains("DoctorName", StringComparison.OrdinalIgnoreCase));
            bool hasDoctorSpecialization = !string.IsNullOrEmpty(decodedFilter) && 
                                          (decodedFilter.Contains("DoctorSpecialization", StringComparison.OrdinalIgnoreCase));

            if (hasPatientName)
            {
                var patientNameFilter = ExtractNameFilter(decodedFilter!, "PatientName");
                if (!string.IsNullOrEmpty(patientNameFilter))
                {
                    // Find matching patient IDs
                    var patientIds = await FindUserIdsByName(patientNameFilter, 1, ct); // RoleId 1 = Patient
                    if (patientIds.Any())
                    {
                        var patientIdFilter = string.Join(" or ", patientIds.Select(id => $"AssigneeId eq {id}"));
                        odataFilter = $"({patientIdFilter})";
                    }
                    else
                    {
                        // No matching patients, return empty result
                        return new PagedResult<AssignmentDisplayModel>
                        {
                            Items = new List<AssignmentDisplayModel>(),
                            TotalCount = 0,
                            PageNumber = (skip / take) + 1,
                            PageSize = take
                        };
                    }
                }
                decodedFilter = RemoveNameFilter(decodedFilter!, "PatientName");
            }

            if (hasDoctorName)
            {
                var doctorNameFilter = ExtractNameFilter(decodedFilter ?? "", "DoctorName");
                if (!string.IsNullOrEmpty(doctorNameFilter))
                {
                    // Find matching doctor IDs
                    var doctorIds = await FindUserIdsByName(doctorNameFilter, 2, ct); // RoleId 2 = Doctor
                    if (doctorIds.Any())
                    {
                        var doctorIdFilter = string.Join(" or ", doctorIds.Select(id => $"AssignerId eq {id}"));
                        if (!string.IsNullOrEmpty(odataFilter))
                            odataFilter = $"{odataFilter} and ({doctorIdFilter})";
                        else
                            odataFilter = $"({doctorIdFilter})";
                    }
                    else
                    {
                        // No matching doctors, return empty result
                        return new PagedResult<AssignmentDisplayModel>
                        {
                            Items = new List<AssignmentDisplayModel>(),
                            TotalCount = 0,
                            PageNumber = (skip / take) + 1,
                            PageSize = take
                        };
                    }
                }
                decodedFilter = RemoveNameFilter(decodedFilter ?? "", "DoctorName");
            }

            if (hasDoctorSpecialization)
            {
                var specializationFilter = ExtractSpecializationFilter(decodedFilter ?? "");
                if (!string.IsNullOrEmpty(specializationFilter))
                {
                    // Find doctors with this specialization
                    var doctorIds = await FindDoctorIdsBySpecialization(specializationFilter, ct);
                    if (doctorIds.Any())
                    {
                        var doctorIdFilter = string.Join(" or ", doctorIds.Select(id => $"AssignerId eq {id}"));
                        if (!string.IsNullOrEmpty(odataFilter))
                            odataFilter = $"{odataFilter} and ({doctorIdFilter})";
                        else
                            odataFilter = $"({doctorIdFilter})";
                    }
                    else
                    {
                        // No matching doctors, return empty result
                        return new PagedResult<AssignmentDisplayModel>
                        {
                            Items = new List<AssignmentDisplayModel>(),
                            TotalCount = 0,
                            PageNumber = (skip / take) + 1,
                            PageSize = take
                        };
                    }
                }
                decodedFilter = RemoveSpecializationFilter(decodedFilter ?? "");
            }

            // Clean up any leftover operators
            if (!string.IsNullOrEmpty(decodedFilter))
            {
                decodedFilter = CleanupFilterOperators(decodedFilter);
            }

            // Transform remaining filter to OData syntax
            // First, replace AssignedDate with AssignedAt (the actual OData property name)
            string? transformedFilter = null;
            if (!string.IsNullOrWhiteSpace(decodedFilter))
            {
                // Replace AssignedDate with AssignedAt before transformation
                var filterForTransformation = decodedFilter.Replace("AssignedDate", "AssignedAt", StringComparison.OrdinalIgnoreCase);
                transformedFilter = ODataFilterHelper.TransformToOData(filterForTransformation);
            }

            // Combine filters
            if (!string.IsNullOrEmpty(transformedFilter))
            {
                if (!string.IsNullOrEmpty(odataFilter))
                    odataFilter = $"{odataFilter} and ({transformedFilter})";
                else
                    odataFilter = transformedFilter;
            }

            // Transform orderBy to remove PatientName/DoctorName/DoctorSpecialization (we'll sort client-side)
            // Also replace AssignedDate with AssignedAt (the actual OData property name)
            string? transformedOrderBy = null;
            bool needsClientSort = false;
            string? clientSortProperty = null;
            bool isDescending = false;
            
            if (!string.IsNullOrEmpty(orderBy))
            {
                // Replace AssignedDate with AssignedAt before processing
                var orderByForProcessing = orderBy.Replace("AssignedDate", "AssignedAt", StringComparison.OrdinalIgnoreCase);
                
                if (orderBy.Contains("PatientName", StringComparison.OrdinalIgnoreCase))
                {
                    needsClientSort = true;
                    clientSortProperty = "PatientName";
                    isDescending = orderBy.Contains("desc", StringComparison.OrdinalIgnoreCase);
                    transformedOrderBy = RemovePropertyFromOrderBy(orderByForProcessing, "PatientName");
                }
                else if (orderBy.Contains("DoctorName", StringComparison.OrdinalIgnoreCase))
                {
                    needsClientSort = true;
                    clientSortProperty = "DoctorName";
                    isDescending = orderBy.Contains("desc", StringComparison.OrdinalIgnoreCase);
                    transformedOrderBy = RemovePropertyFromOrderBy(orderByForProcessing, "DoctorName");
                }
                else if (orderBy.Contains("DoctorSpecialization", StringComparison.OrdinalIgnoreCase))
                {
                    needsClientSort = true;
                    clientSortProperty = "DoctorSpecialization";
                    isDescending = orderBy.Contains("desc", StringComparison.OrdinalIgnoreCase);
                    transformedOrderBy = RemovePropertyFromOrderBy(orderByForProcessing, "DoctorSpecialization");
                }
                else
                {
                    transformedOrderBy = orderByForProcessing;
                }
            }

            // Query OData endpoint
            var result = await ODataService.QueryAsync<UserAssignment>(
                "UserAssignments",
                skip,
                take,
                transformedOrderBy,
                string.IsNullOrEmpty(odataFilter) ? null : odataFilter,
                ct
            );

            // Map UserAssignment to AssignmentDisplayModel
            var items = result.Items.Select(ua => MapAssignmentToDisplayModel(ua)).ToList();

            // Client-side sort if needed (for old OData method - not used in new implementation)
            // This code is kept for backward compatibility but won't be reached in new LoadAssignmentsPagedAsync

            return new PagedResult<AssignmentDisplayModel>
            {
                Items = items,
                TotalCount = result.TotalCount,
                PageNumber = result.PageNumber,
                PageSize = result.PageSize
            };
        }
        catch (Exception ex)
        {
            return new PagedResult<AssignmentDisplayModel>
            {
                Items = new List<AssignmentDisplayModel>(),
                TotalCount = 0,
                PageNumber = 1,
                PageSize = 10
            };
