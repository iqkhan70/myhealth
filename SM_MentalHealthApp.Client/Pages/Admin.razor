    private string CleanupFilterOperators(string filter)
    {
        if (string.IsNullOrWhiteSpace(filter))
            return filter;

        // Remove leftover "and", "or" operators
        var result = System.Text.RegularExpressions.Regex.Replace(filter, @"^\s*(and|or)\s+", "", System.Text.RegularExpressions.RegexOptions.IgnoreCase);
        result = System.Text.RegularExpressions.Regex.Replace(result, @"\s+(and|or)\s+$", "", System.Text.RegularExpressions.RegexOptions.IgnoreCase);
        result = System.Text.RegularExpressions.Regex.Replace(result, @"\s+(and|or)\s+(and|or)\s+", " ", System.Text.RegularExpressions.RegexOptions.IgnoreCase);
        
        // Remove empty parentheses
        result = System.Text.RegularExpressions.Regex.Replace(result, @"\(\s*\)", "", System.Text.RegularExpressions.RegexOptions.IgnoreCase);
        result = System.Text.RegularExpressions.Regex.Replace(result, @"\(\s*and\s*\)", "", System.Text.RegularExpressions.RegexOptions.IgnoreCase);
        result = System.Text.RegularExpressions.Regex.Replace(result, @"\(\s*or\s*\)", "", System.Text.RegularExpressions.RegexOptions.IgnoreCase);
        
        // Trim and clean up
        result = result.Trim();
        
        // Check if result is only operators
        if (IsOnlyOperators(result))
            return string.Empty;
            
        return result;
    }

    private bool IsOnlyOperators(string filter)
    {
        if (string.IsNullOrWhiteSpace(filter))
            return true;
            
        // Check if filter contains only "and", "or", parentheses, and whitespace
        var cleaned = System.Text.RegularExpressions.Regex.Replace(filter, @"\s*(and|or|\(|\))\s*", "", System.Text.RegularExpressions.RegexOptions.IgnoreCase);
        return string.IsNullOrWhiteSpace(cleaned);
    }

