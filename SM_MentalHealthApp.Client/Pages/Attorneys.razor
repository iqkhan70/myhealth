@page "/attorneys"
@inject HttpClient Http
@inject NotificationService NotificationService
@inject IAuthService AuthService
@inject IExpertiseService ExpertiseService
@inject IJSRuntime JSRuntime
@inject DialogService DialogService
@using SM_MentalHealthApp.Shared
@using SM_MentalHealthApp.Client.Services
@using SM_MentalHealthApp.Client.Components
@using System.Net.Http
@using Radzen
@using Radzen.Blazor

<div class="coordinators-page">
    <div class="coordinators-header">
        @if (AuthService.CurrentUser?.RoleId == 3) // Admin
        {
            <h2>Attorneys</h2>
            <p>Manage attorney accounts and their information.</p>
            <button @onclick="ShowAddAttorneyForm" class="add-coordinator-btn">
                ➕ Add New Attorney
            </button>
        }
        else
        {
            <h2>Access Denied</h2>
            <p>You don't have permission to view this page.</p>
        }
    </div>

    @if (AuthService.CurrentUser?.RoleId == 3) // Admin
    {
        <!-- Attorneys Grid -->
        <div class="coordinators-content">
            @if (isLoading)
            {
                <div class="loading-state">
                    <div class="loading-spinner"></div>
                    <p>Loading attorneys...</p>
                </div>
            }
            else
            {
                <RadzenDataGrid @ref="_grid" Data="@GetFilteredAttorneys()" 
                               TItem="User" 
                               AllowPaging="true" 
                               PageSize="15"
                               AllowSorting="true" 
                               FilterMode="FilterMode.Advanced" 
                               ShowPagingSummary="true"
                               EmptyText="No attorneys found"
                               AllowFiltering="true"
                               FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                               ShowFilterRow="true"
                               ShowFilterRowButtons="true">
                    <Columns>
                        <RadzenDataGridColumn TItem="User" Property="FirstName" Title="Name" Width="200px" Filterable="true">
                            <Template Context="attorney">
                                @if (attorney != null)
                                {
                                    <div>
                                        <strong>@(attorney.FirstName ?? "") @(attorney.LastName ?? "")</strong>
                                        <br />
                                        <small class="text-muted">@(attorney.Email ?? "")</small>
                                    </div>
                                }
                            </Template>
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="User" Property="Email" Title="Email" Width="250px" Filterable="true" />
                        <RadzenDataGridColumn TItem="User" Property="MobilePhone" Title="Phone" Width="150px" Filterable="true">
                            <Template Context="attorney">
                                @(attorney?.MobilePhone ?? "N/A")
                            </Template>
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="User" Property="ZipCode" Title="ZIP Code" Width="120px" Filterable="true">
                            <Template Context="attorney">
                                @if (attorney != null && !string.IsNullOrWhiteSpace(attorney.ZipCode))
                                {
                                    <span class="badge bg-info">@attorney.ZipCode</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </Template>
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="User" Property="MaxTravelMiles" Title="Max Travel (mi)" Width="130px" Filterable="true">
                            <Template Context="attorney">
                                @if (attorney != null && attorney.MaxTravelMiles.HasValue)
                                {
                                    <span class="badge bg-secondary">@attorney.MaxTravelMiles mi</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </Template>
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="User" Property="DateOfBirth" Title="Date of Birth" Width="150px" Filterable="true">
                            <Template Context="attorney">
                                @(attorney?.DateOfBirth.ToString("MM/dd/yyyy") ?? "N/A")
                            </Template>
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="User" Property="Gender" Title="Gender" Width="100px" Filterable="true">
                            <Template Context="attorney">
                                @(attorney?.Gender ?? "N/A")
                            </Template>
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="User" Property="IsActive" Title="Status" Width="100px" Filterable="true">
                            <Template Context="attorney">
                                @if (attorney != null)
                                {
                                    <span class="badge @(attorney.IsActive ? "badge-success" : "badge-danger")">
                                        @(attorney.IsActive ? "Active" : "Inactive")
                                    </span>
                                }
                            </Template>
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="User" Property="CreatedAt" Title="Created" Width="150px" Filterable="true">
                            <Template Context="attorney">
                                @(attorney?.CreatedAt.ToString("MM/dd/yyyy") ?? "N/A")
                            </Template>
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="User" Title="Actions" Width="150px" Sortable="false" Filterable="false">
                            <Template Context="attorney">
                                @if (attorney != null)
                                {
                                    <div class="action-buttons">
                                        <RadzenButton Icon="edit" ButtonStyle="ButtonStyle.Info" 
                                                     Variant="Variant.Flat" 
                                                     Size="ButtonSize.Small"
                                                     Title="Edit attorney"
                                                     Click="@(() => EditAttorney(attorney))" />
                                        <RadzenButton Icon="@(attorney.IsActive ? "block" : "check")" 
                                                     ButtonStyle="@(attorney.IsActive ? ButtonStyle.Warning : ButtonStyle.Success)" 
                                                     Variant="Variant.Flat" 
                                                     Size="ButtonSize.Small"
                                                     Title="@(attorney.IsActive ? "Deactivate" : "Activate")"
                                                     Click="@(() => ToggleAttorneyStatus(attorney))" />
                                    </div>
                                }
                            </Template>
                        </RadzenDataGridColumn>
                    </Columns>
                </RadzenDataGrid>
            }
        </div>

        <!-- Add/Edit Attorney Form Modal -->
        @if (showAttorneyForm)
        {
            <div class="modal-overlay">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3>@(editingAttorney == null ? "Add New Attorney" : "Edit Attorney")</h3>
                        <button @onclick="CloseAttorneyForm" class="close-btn">✕</button>
                    </div>
                    <div class="modal-body">
                        <div class="form-row">
                            <div class="form-group">
                                <label>First Name *</label>
                                <input @bind="attorneyForm.FirstName" class="form-input" />
                            </div>
                            
                            <div class="form-group">
                                <label>Last Name *</label>
                                <input @bind="attorneyForm.LastName" class="form-input" />
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group">
                                <label>Email *</label>
                                <input @bind="attorneyForm.Email" type="email" class="form-input" />
                            </div>
                            
                            <div class="form-group">
                                <label>Password @(editingAttorney == null ? "*" : "(leave blank to keep current)")</label>
                                <input @bind="attorneyForm.Password" type="password" class="form-input" />
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group">
                                <label>Date of Birth *</label>
                                <input @bind="attorneyForm.DateOfBirth" type="date" class="form-input" />
                            </div>
                            
                            <div class="form-group">
                                <label>Gender</label>
                                <select @bind="attorneyForm.Gender" class="form-input">
                                    <option value="">Select Gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                    <option value="Prefer not to say">Prefer not to say</option>
                                </select>
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group">
                                <label>Mobile Phone</label>
                                <input @bind="attorneyForm.MobilePhone" type="tel" class="form-input" placeholder="+1 (555) 123-4567" />
                            </div>
                            
                            <div class="form-group">
                                <label>ZIP Code</label>
                                <input @bind="attorneyForm.ZipCode" type="text" class="form-input" placeholder="e.g., 66221" maxlength="10" />
                                <small class="text-muted">ZIP code for location-based matching</small>
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group">
                                <label>Max Travel Distance (miles)</label>
                                <input @bind="attorneyForm.MaxTravelMiles" type="number" class="form-input" placeholder="50" min="0" />
                                <small class="text-muted">Maximum distance this attorney is willing to travel (optional)</small>
                            </div>
                            
                            <div class="form-group">
                                <label>Company (Optional)</label>
                                <RadzenDropDown Data="@companies" TextProperty="Name" ValueProperty="Id"
                                    @bind-Value="attorneyForm.CompanyId" AllowFiltering="true"
                                    FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" 
                                    Placeholder="Select a company or leave blank if independent..."
                                    Style="width: 100%;" />
                                <small class="text-muted">If this attorney belongs to a company, select it from the list. Leave blank if independent.</small>
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group" style="width: 100%;">
                                <ExpertiseMultiSelect Label="Expertise Categories"
                                                     Placeholder="Type to search and select expertise..."
                                                     HelpText="Select one or more expertise categories for this attorney"
                                                     @bind-SelectedExpertiseIds="selectedAttorneyExpertiseIds" />
                            </div>
                        </div>
                    </div>
                    
                    <div class="modal-footer">
                        <button @onclick="CloseAttorneyForm" class="btn btn-secondary">Cancel</button>
                        <button @onclick="SaveAttorney" disabled="@isSaving" class="btn btn-primary">
                            @(isSaving ? "Saving..." : (editingAttorney == null ? "Add Attorney" : "Update Attorney"))
                        </button>
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    private RadzenDataGrid<User>? _grid;
    private List<User> attorneys = new();
    private List<Company> companies = new();
    private bool isLoading = true;
    private bool showAttorneyForm = false;
    private bool isSaving = false;
    private User? editingAttorney;
    private CreateAttorneyRequest attorneyForm = new();
    private List<int> selectedAttorneyExpertiseIds = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadCompanies();
        await LoadAttorneys();
    }

    private async Task LoadCompanies()
    {
        try
        {
            companies = await Http.GetFromJsonAsync<List<Company>>("api/company/active") ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading companies: {ex.Message}");
            NotificationService.Notify(NotificationSeverity.Warning, "Warning", "Failed to load companies list.");
        }
    }

    private async Task LoadAttorneys()
    {
        try
        {
            isLoading = true;
            
            if (AuthService.CurrentUser?.RoleId == 3) // Admin
            {
                // Ensure authorization header is set
                var token = AuthService.Token;
                if (!string.IsNullOrEmpty(token))
                {
                    Http.DefaultRequestHeaders.Authorization = 
                        new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);
                }
                
                attorneys = await Http.GetFromJsonAsync<List<User>>("api/admin/attorneys") ?? new();
                
                // Debug: Check for null attorneys
                var nullAttorneys = attorneys.Where(a => a == null).Count();
                if (nullAttorneys > 0)
                {
                    Console.WriteLine($"Warning: Found {nullAttorneys} null attorneys in the list");
                }
            }
            else
            {
                attorneys = new(); // No access
            }
        }
        catch (Exception ex)
        {
            NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to load attorneys: " + ex.Message);
        }
        finally
        {
            isLoading = false;
            StateHasChanged(); // Ensure UI updates
        }
    }

    private async Task ShowAddAttorneyForm()
    {
        editingAttorney = null;
        attorneyForm = new CreateAttorneyRequest { DateOfBirth = DateTime.Now.AddYears(-30) };
        selectedAttorneyExpertiseIds = new List<int>();
        await LoadCompanies(); // Refresh companies list
        showAttorneyForm = true;
    }

    private async Task EditAttorney(User attorney)
    {
        if (attorney == null) return;
        
        editingAttorney = attorney;
        attorneyForm = new CreateAttorneyRequest
        {
            FirstName = attorney.FirstName ?? string.Empty,
            LastName = attorney.LastName ?? string.Empty,
            Email = attorney.Email ?? string.Empty,
            DateOfBirth = attorney.DateOfBirth,
            Gender = attorney.Gender ?? string.Empty,
            MobilePhone = attorney.MobilePhone ?? string.Empty,
            CompanyId = attorney.CompanyId,
            ZipCode = attorney.ZipCode,
            MaxTravelMiles = attorney.MaxTravelMiles,
            Password = string.Empty // Don't populate password
        };
        
        // Load current expertise IDs for this attorney
        try
        {
            selectedAttorneyExpertiseIds = await ExpertiseService.GetSmeExpertisesAsync(attorney.Id);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading attorney expertises: {ex.Message}");
            selectedAttorneyExpertiseIds = new List<int>();
        }
        
        await LoadCompanies(); // Refresh companies list
        showAttorneyForm = true;
    }

    private void CloseAttorneyForm()
    {
        showAttorneyForm = false;
        editingAttorney = null;
        attorneyForm = new CreateAttorneyRequest();
        selectedAttorneyExpertiseIds = new List<int>();
    }

    private async Task SaveAttorney()
    {
        if (string.IsNullOrWhiteSpace(attorneyForm.FirstName) || 
            string.IsNullOrWhiteSpace(attorneyForm.LastName) || 
            string.IsNullOrWhiteSpace(attorneyForm.Email))
        {
            NotificationService.Notify(NotificationSeverity.Warning, "Validation", "Please fill in all required fields.");
            return;
        }

        if (editingAttorney == null && string.IsNullOrWhiteSpace(attorneyForm.Password))
        {
            NotificationService.Notify(NotificationSeverity.Warning, "Validation", "Password is required for new attorneys.");
            return;
        }

        try
        {
            isSaving = true;
            
            if (editingAttorney == null)
            {
                // Create new attorney
                var result = await Http.PostAsJsonAsync("api/admin/create-attorney", attorneyForm);
                if (result.IsSuccessStatusCode)
                {
                    // Get the created attorney ID from response
                    var response = await result.Content.ReadFromJsonAsync<Dictionary<string, object>>();
                    if (response != null && response.ContainsKey("attorneyId") && selectedAttorneyExpertiseIds.Any())
                    {
                        var attorneyId = Convert.ToInt32(response["attorneyId"]);
                        // Update expertise
                        await ExpertiseService.SetSmeExpertisesAsync(attorneyId, selectedAttorneyExpertiseIds);
                    }
                    
                    NotificationService.Notify(NotificationSeverity.Success, "Success", "Attorney added successfully!");
                    CloseAttorneyForm();
                    await LoadAttorneys(); // Reload the list after closing form
                    if (_grid != null)
                    {
                        await _grid.Reload();
                    }
                    StateHasChanged(); // Force UI update
                }
                else
                {
                    var error = await result.Content.ReadAsStringAsync();
                    NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to add attorney: " + error);
                }
            }
            else
            {
                // Update existing attorney
                var updateRequest = new UpdateAttorneyRequest
                {
                    FirstName = attorneyForm.FirstName,
                    LastName = attorneyForm.LastName,
                    Email = attorneyForm.Email,
                    DateOfBirth = attorneyForm.DateOfBirth,
                    Gender = attorneyForm.Gender,
                    MobilePhone = attorneyForm.MobilePhone,
                    CompanyId = attorneyForm.CompanyId,
                    ZipCode = attorneyForm.ZipCode,
                    MaxTravelMiles = attorneyForm.MaxTravelMiles,
                    Password = string.IsNullOrWhiteSpace(attorneyForm.Password) ? null : attorneyForm.Password
                };
                
                var result = await Http.PutAsJsonAsync($"api/admin/update-attorney/{editingAttorney.Id}", updateRequest);
                if (result.IsSuccessStatusCode)
                {
                    // Update expertise
                    var expertiseResult = await ExpertiseService.SetSmeExpertisesAsync(editingAttorney.Id, selectedAttorneyExpertiseIds);
                    if (!expertiseResult)
                    {
                        NotificationService.Notify(NotificationSeverity.Warning, "Warning", "Attorney updated but failed to update expertise. You can try again later.");
                    }
                    
                    NotificationService.Notify(NotificationSeverity.Success, "Success", "Attorney updated successfully!");
                    CloseAttorneyForm();
                    await LoadAttorneys();
                    if (_grid != null)
                    {
                        await _grid.Reload();
                    }
                }
                else
                {
                    var error = await result.Content.ReadAsStringAsync();
                    NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to update attorney: " + error);
                }
            }
        }
        catch (Exception ex)
        {
            NotificationService.Notify(NotificationSeverity.Error, "Error", $"An error occurred: {ex.Message}");
        }
        finally
        {
            isSaving = false;
        }
    }

    private List<User> GetFilteredAttorneys()
    {
        var filtered = attorneys.Where(a => a != null && a.RoleId == 5).AsEnumerable(); // Only attorneys
        
        return filtered.ToList();
    }

    private async Task ToggleAttorneyStatus(User attorney)
    {
        if (attorney == null) return;

        try
        {
            var action = attorney.IsActive ? "deactivate" : "reactivate";
            var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to {action} this attorney?");
            
            if (!confirmed) return;

            if (attorney.IsActive)
            {
                var result = await Http.DeleteAsync($"api/admin/attorneys/{attorney.Id}/deactivate");
                if (result.IsSuccessStatusCode)
                {
                    NotificationService.Notify(NotificationSeverity.Success, "Success", "Attorney deactivated successfully!");
                    await LoadAttorneys();
                    if (_grid != null)
                    {
                        await _grid.Reload();
                    }
                }
                else
                {
                    var error = await result.Content.ReadAsStringAsync();
                    NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to deactivate attorney: " + error);
                }
            }
            else
            {
                var result = await Http.PostAsync($"api/admin/attorneys/{attorney.Id}/reactivate", null);
                if (result.IsSuccessStatusCode)
                {
                    NotificationService.Notify(NotificationSeverity.Success, "Success", "Attorney reactivated successfully!");
                    await LoadAttorneys();
                    if (_grid != null)
                    {
                        await _grid.Reload();
                    }
                }
                else
                {
                    var error = await result.Content.ReadAsStringAsync();
                    NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to reactivate attorney: " + error);
                }
            }
        }
        catch (Exception ex)
        {
            NotificationService.Notify(NotificationSeverity.Error, "Error", $"An error occurred: {ex.Message}");
        }
    }

    public class CreateAttorneyRequest
    {
        public string FirstName { get; set; } = string.Empty;
        public string LastName { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
        public DateTime DateOfBirth { get; set; }
        public string Gender { get; set; } = string.Empty;
        public string? MobilePhone { get; set; }
        public int? CompanyId { get; set; }
        public string? ZipCode { get; set; }
        public int? MaxTravelMiles { get; set; }
    }

    public class UpdateAttorneyRequest
    {
        public string? FirstName { get; set; }
        public string? LastName { get; set; }
        public string? Email { get; set; }
        public DateTime? DateOfBirth { get; set; }
        public string? Gender { get; set; }
        public string? MobilePhone { get; set; }
        public string? Password { get; set; }
        public int? CompanyId { get; set; }
        public string? ZipCode { get; set; }
        public int? MaxTravelMiles { get; set; }
    }
}

