@page "/smes"
@inject HttpClient Http
@inject NotificationService NotificationService
@inject IAuthService AuthService
@inject IExpertiseService ExpertiseService
@inject IJSRuntime JSRuntime
@inject DialogService DialogService
@using SM_MentalHealthApp.Shared
@using SM_MentalHealthApp.Client.Services
@using SM_MentalHealthApp.Client.Components
@using System.Net.Http
@using Radzen
@using Radzen.Blazor

<div class="coordinators-page">
    <div class="coordinators-header">
        @if (AuthService.CurrentUser?.RoleId == 3) // Admin
        {
            <h2>SMEs</h2>
            <p>Manage SME accounts and their information.</p>
            <button @onclick="ShowAddSmeForm" class="add-coordinator-btn">
                ➕ Add New SME
            </button>
        }
        else
        {
            <h2>Access Denied</h2>
            <p>You don't have permission to view this page.</p>
        }
    </div>

    @if (AuthService.CurrentUser?.RoleId == 3) // Admin
    {
        <!-- SMEs Grid -->
        <div class="coordinators-content">
            @if (isLoading)
            {
                <div class="loading-state">
                    <div class="loading-spinner"></div>
                    <p>Loading SMEs...</p>
                </div>
            }
            else
            {
                <RadzenDataGrid @ref="_grid" Data="@GetFilteredSmes()" 
                               TItem="User" 
                               AllowPaging="true" 
                               PageSize="15"
                               AllowSorting="true" 
                               FilterMode="FilterMode.Advanced" 
                               ShowPagingSummary="true"
                               EmptyText="No SMEs found"
                               AllowFiltering="true"
                               FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                               ShowFilterRow="true"
                               ShowFilterRowButtons="true">
                    <Columns>
                        <RadzenDataGridColumn TItem="User" Property="FirstName" Title="Name" Width="200px" Filterable="true">
                            <Template Context="sme">
                                @if (sme != null)
                                {
                                    <div>
                                        <strong>@(sme.FirstName ?? "") @(sme.LastName ?? "")</strong>
                                        <br />
                                        <small class="text-muted">@(sme.Email ?? "")</small>
                                    </div>
                                }
                            </Template>
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="User" Property="Email" Title="Email" Width="250px" Filterable="true" />
                        <RadzenDataGridColumn TItem="User" Property="MobilePhone" Title="Phone" Width="150px" Filterable="true">
                            <Template Context="sme">
                                @(sme?.MobilePhone ?? "N/A")
                            </Template>
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="User" Property="DateOfBirth" Title="Date of Birth" Width="150px" Filterable="true">
                            <Template Context="sme">
                                @(sme?.DateOfBirth.ToString("MM/dd/yyyy") ?? "N/A")
                            </Template>
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="User" Property="Gender" Title="Gender" Width="100px" Filterable="true">
                            <Template Context="sme">
                                @(sme?.Gender ?? "N/A")
                            </Template>
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="User" Property="IsActive" Title="Status" Width="100px" Filterable="true">
                            <Template Context="sme">
                                @if (sme != null)
                                {
                                    <span class="badge @(sme.IsActive ? "badge-success" : "badge-danger")">
                                        @(sme.IsActive ? "Active" : "Inactive")
                                    </span>
                                }
                            </Template>
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="User" Property="CreatedAt" Title="Created" Width="150px" Filterable="true">
                            <Template Context="sme">
                                @(sme?.CreatedAt.ToString("MM/dd/yyyy") ?? "N/A")
                            </Template>
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="User" Title="Actions" Width="150px" Sortable="false" Filterable="false">
                            <Template Context="sme">
                                @if (sme != null)
                                {
                                    <div class="action-buttons">
                                        <RadzenButton Icon="edit" ButtonStyle="ButtonStyle.Info" 
                                                     Variant="Variant.Flat" 
                                                     Size="ButtonSize.Small"
                                                     Title="Edit SME"
                                                     Click="@(() => EditSme(sme))" />
                                        <RadzenButton Icon="@(sme.IsActive ? "block" : "check")" 
                                                     ButtonStyle="@(sme.IsActive ? ButtonStyle.Warning : ButtonStyle.Success)" 
                                                     Variant="Variant.Flat" 
                                                     Size="ButtonSize.Small"
                                                     Title="@(sme.IsActive ? "Deactivate" : "Activate")"
                                                     Click="@(() => ToggleSmeStatus(sme))" />
                                    </div>
                                }
                            </Template>
                        </RadzenDataGridColumn>
                    </Columns>
                </RadzenDataGrid>
            }
        </div>

        <!-- Add/Edit SME Form Modal -->
        @if (showSmeForm)
        {
            <div class="modal-overlay">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3>@(editingSme == null ? "Add New SME" : "Edit SME")</h3>
                        <button @onclick="CloseSmeForm" class="close-btn">✕</button>
                    </div>
                    <div class="modal-body">
                        <div class="form-row">
                            <div class="form-group">
                                <label>First Name *</label>
                                <input @bind="smeForm.FirstName" class="form-input" />
                            </div>
                            
                            <div class="form-group">
                                <label>Last Name *</label>
                                <input @bind="smeForm.LastName" class="form-input" />
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group">
                                <label>Email *</label>
                                <input @bind="smeForm.Email" type="email" class="form-input" />
                            </div>
                            
                            <div class="form-group">
                                <label>Password @(editingSme == null ? "*" : "(leave blank to keep current)")</label>
                                <input @bind="smeForm.Password" type="password" class="form-input" />
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group">
                                <label>Date of Birth *</label>
                                <input @bind="smeForm.DateOfBirth" type="date" class="form-input" />
                            </div>
                            
                            <div class="form-group">
                                <label>Gender</label>
                                <select @bind="smeForm.Gender" class="form-input">
                                    <option value="">Select Gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                    <option value="Prefer not to say">Prefer not to say</option>
                                </select>
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group">
                                <label>Mobile Phone</label>
                                <input @bind="smeForm.MobilePhone" type="tel" class="form-input" placeholder="+1 (555) 123-4567" />
                            </div>
                            
                            <div class="form-group">
                                <!-- Empty div for layout balance -->
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group">
                                <label>Company (Optional)</label>
                                <RadzenDropDown Data="@companies" TextProperty="Name" ValueProperty="Id"
                                    @bind-Value="smeForm.CompanyId" AllowFiltering="true"
                                    FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" 
                                    Placeholder="Select a company or leave blank if independent..."
                                    Style="width: 100%;" />
                                <small class="text-muted">If this SME belongs to a company, select it from the list. Leave blank if independent.</small>
                            </div>
                            
                            <div class="form-group">
                                <!-- Empty div for layout balance -->
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group" style="width: 100%;">
                                <ExpertiseMultiSelect Label="Expertise Categories"
                                                     Placeholder="Type to search and select expertise..."
                                                     HelpText="Select one or more expertise categories for this SME"
                                                     @bind-SelectedExpertiseIds="selectedSmeExpertiseIds" />
                            </div>
                        </div>
                    </div>
                    
                    <div class="modal-footer">
                        <button @onclick="CloseSmeForm" class="btn btn-secondary">Cancel</button>
                        <button @onclick="SaveSme" disabled="@isSaving" class="btn btn-primary">
                            @(isSaving ? "Saving..." : (editingSme == null ? "Add SME" : "Update SME"))
                        </button>
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    private RadzenDataGrid<User>? _grid;
    private List<User> smes = new();
    private List<Company> companies = new();
    private List<int> selectedSmeExpertiseIds = new();
    private bool isLoading = true;
    private bool showSmeForm = false;
    private bool isSaving = false;
    private User? editingSme;
    private CreateSmeRequest smeForm = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadCompanies();
        await LoadSmes();
    }

    private async Task LoadCompanies()
    {
        try
        {
            companies = await Http.GetFromJsonAsync<List<Company>>("api/company/active") ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading companies: {ex.Message}");
            NotificationService.Notify(NotificationSeverity.Warning, "Warning", "Failed to load companies list.");
        }
    }

    private async Task LoadSmes()
    {
        try
        {
            isLoading = true;
            
            if (AuthService.CurrentUser?.RoleId == 3) // Admin
            {
                // Ensure authorization header is set
                var token = AuthService.Token;
                if (!string.IsNullOrEmpty(token))
                {
                    Http.DefaultRequestHeaders.Authorization = 
                        new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);
                }
                
                smes = await Http.GetFromJsonAsync<List<User>>("api/admin/smes") ?? new();
            }
            else
            {
                smes = new(); // No access
            }
        }
        catch (Exception ex)
        {
            NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to load SMEs: " + ex.Message);
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task ShowAddSmeForm()
    {
        editingSme = null;
        smeForm = new CreateSmeRequest { DateOfBirth = DateTime.Now.AddYears(-30) };
        selectedSmeExpertiseIds = new List<int>();
        await LoadCompanies();
        showSmeForm = true;
    }

    private async Task EditSme(User sme)
    {
        if (sme == null) return;
        
        editingSme = sme;
        smeForm = new CreateSmeRequest
        {
            FirstName = sme.FirstName ?? string.Empty,
            LastName = sme.LastName ?? string.Empty,
            Email = sme.Email ?? string.Empty,
            DateOfBirth = sme.DateOfBirth,
            Gender = sme.Gender ?? string.Empty,
            MobilePhone = sme.MobilePhone ?? string.Empty,
            CompanyId = sme.CompanyId,
            Password = string.Empty // Don't populate password
        };
        
        // Load current expertise IDs for this SME
        try
        {
            selectedSmeExpertiseIds = await ExpertiseService.GetSmeExpertisesAsync(sme.Id);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading SME expertises: {ex.Message}");
            selectedSmeExpertiseIds = new List<int>();
        }
        
        await LoadCompanies();
        showSmeForm = true;
    }

    private void CloseSmeForm()
    {
        showSmeForm = false;
        editingSme = null;
        smeForm = new CreateSmeRequest();
        selectedSmeExpertiseIds = new List<int>();
    }

    private async Task SaveSme()
    {
        if (string.IsNullOrWhiteSpace(smeForm.FirstName) || 
            string.IsNullOrWhiteSpace(smeForm.LastName) || 
            string.IsNullOrWhiteSpace(smeForm.Email))
        {
            NotificationService.Notify(NotificationSeverity.Warning, "Validation", "Please fill in all required fields.");
            return;
        }

        if (editingSme == null && string.IsNullOrWhiteSpace(smeForm.Password))
        {
            NotificationService.Notify(NotificationSeverity.Warning, "Validation", "Password is required for new SMEs.");
            return;
        }

        try
        {
            isSaving = true;
            
            if (editingSme == null)
            {
                // Create new SME
                var result = await Http.PostAsJsonAsync("api/admin/create-sme", smeForm);
                if (result.IsSuccessStatusCode)
                {
                    NotificationService.Notify(NotificationSeverity.Success, "Success", "SME added successfully!");
                    CloseSmeForm();
                    await LoadSmes();
                    if (_grid != null)
                    {
                        await _grid.Reload();
                    }
                    StateHasChanged();
                }
                else
                {
                    var error = await result.Content.ReadAsStringAsync();
                    NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to add SME: " + error);
                }
            }
            else
            {
                // Update existing SME
                var updateRequest = new UpdateSmeRequest
                {
                    FirstName = smeForm.FirstName,
                    LastName = smeForm.LastName,
                    Email = smeForm.Email,
                    DateOfBirth = smeForm.DateOfBirth,
                    Gender = smeForm.Gender,
                    MobilePhone = smeForm.MobilePhone,
                    CompanyId = smeForm.CompanyId,
                    Password = string.IsNullOrWhiteSpace(smeForm.Password) ? null : smeForm.Password
                };
                
                var result = await Http.PutAsJsonAsync($"api/admin/update-sme/{editingSme.Id}", updateRequest);
                if (result.IsSuccessStatusCode)
                {
                    // Update expertise
                    var expertiseResult = await ExpertiseService.SetSmeExpertisesAsync(editingSme.Id, selectedSmeExpertiseIds);
                    if (!expertiseResult)
                    {
                        NotificationService.Notify(NotificationSeverity.Warning, "Warning", "SME updated but failed to update expertise. You can try again later.");
                    }
                    
                    NotificationService.Notify(NotificationSeverity.Success, "Success", "SME updated successfully!");
                    CloseSmeForm();
                    await LoadSmes();
                    if (_grid != null)
                    {
                        await _grid.Reload();
                    }
                }
                else
                {
                    var error = await result.Content.ReadAsStringAsync();
                    NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to update SME: " + error);
                }
            }
        }
        catch (Exception ex)
        {
            NotificationService.Notify(NotificationSeverity.Error, "Error", $"An error occurred: {ex.Message}");
        }
        finally
        {
            isSaving = false;
        }
    }

    private List<User> GetFilteredSmes()
    {
        var filtered = smes.Where(a => a != null && a.RoleId == 6).AsEnumerable(); // Only SMEs (RoleId = 6)
        
        return filtered.ToList();
    }

    private async Task ToggleSmeStatus(User sme)
    {
        if (sme == null) return;

        try
        {
            var action = sme.IsActive ? "deactivate" : "reactivate";
            var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to {action} this SME?");
            
            if (!confirmed) return;

            if (sme.IsActive)
            {
                var result = await Http.DeleteAsync($"api/admin/smes/{sme.Id}/deactivate");
                if (result.IsSuccessStatusCode)
                {
                    NotificationService.Notify(NotificationSeverity.Success, "Success", "SME deactivated successfully!");
                    await LoadSmes();
                    if (_grid != null)
                    {
                        await _grid.Reload();
                    }
                }
                else
                {
                    var error = await result.Content.ReadAsStringAsync();
                    NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to deactivate SME: " + error);
                }
            }
            else
            {
                var result = await Http.PostAsync($"api/admin/smes/{sme.Id}/reactivate", null);
                if (result.IsSuccessStatusCode)
                {
                    NotificationService.Notify(NotificationSeverity.Success, "Success", "SME reactivated successfully!");
                    await LoadSmes();
                    if (_grid != null)
                    {
                        await _grid.Reload();
                    }
                }
                else
                {
                    var error = await result.Content.ReadAsStringAsync();
                    NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to reactivate SME: " + error);
                }
            }
        }
        catch (Exception ex)
        {
            NotificationService.Notify(NotificationSeverity.Error, "Error", $"An error occurred: {ex.Message}");
        }
    }

    public class CreateSmeRequest
    {
        public string FirstName { get; set; } = string.Empty;
        public string LastName { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
        public DateTime DateOfBirth { get; set; }
        public string Gender { get; set; } = string.Empty;
        public string? MobilePhone { get; set; }
        public int? CompanyId { get; set; }
    }

    public class UpdateSmeRequest
    {
        public string? FirstName { get; set; }
        public string? LastName { get; set; }
        public string? Email { get; set; }
        public DateTime? DateOfBirth { get; set; }
        public string? Gender { get; set; }
        public string? MobilePhone { get; set; }
        public string? Password { get; set; }
        public int? CompanyId { get; set; }
    }
}

