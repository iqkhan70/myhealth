@page "/expertise"
@using SM_MentalHealthApp.Shared
@using SM_MentalHealthApp.Client.Services
@using SM_MentalHealthApp.Client.Components
@using Radzen
@using Radzen.Blazor
@inject IExpertiseService ExpertiseService
@inject NotificationService NotificationService
@inject DialogService DialogService
@inject IAuthService AuthService
@using SM_MentalHealthApp.Client.Components

<PageTitle>Expertise Management</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <SMPageHeader Title="Expertise Management" Icon="fas fa-tags">
            </SMPageHeader>

            @if (AuthService.CurrentUser?.RoleId == 3) // Admin
            {
                <div class="row mb-3">
                    <div class="col-12 d-flex justify-content-end">
                        <button class="btn btn-success" @onclick="ShowAddExpertiseForm">
                            <i class="fas fa-plus"></i> Add Expertise
                        </button>
                    </div>
                </div>

                @if (isLoading)
                {
                    <div class="text-center p-4">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                }
                else
                {
                    <RadzenDataGrid @ref="grid" TItem="SM_MentalHealthApp.Shared.Expertise" 
                        Data="@expertises" 
                        AllowPaging="true" 
                        PageSize="20" 
                        AllowSorting="true" 
                        AllowFiltering="true"
                        FilterMode="FilterMode.Advanced"
                        ShowPagingSummary="true">
                        <Columns>
                            <RadzenDataGridColumn TItem="SM_MentalHealthApp.Shared.Expertise" Property="Name" Title="Name" Width="200px" />
                            <RadzenDataGridColumn TItem="SM_MentalHealthApp.Shared.Expertise" Property="Description" Title="Description" Width="300px" />
                            <RadzenDataGridColumn TItem="SM_MentalHealthApp.Shared.Expertise" Property="IsActive" Title="Status" Width="100px">
                                <Template Context="exp">
                                    <span class="badge @(exp.IsActive ? "bg-success" : "bg-secondary")">
                                        @(exp.IsActive ? "Active" : "Inactive")
                                    </span>
                                </Template>
                            </RadzenDataGridColumn>
                            <RadzenDataGridColumn TItem="SM_MentalHealthApp.Shared.Expertise" Property="CreatedAt" Title="Created" Width="150px">
                                <Template Context="exp">
                                    @exp.CreatedAt.ToString("MMM dd, yyyy")
                                </Template>
                            </RadzenDataGridColumn>
                            <RadzenDataGridColumn TItem="SM_MentalHealthApp.Shared.Expertise" Title="Actions" Width="150px" Sortable="false" Filterable="false">
                                <Template Context="exp">
                                    <RadzenButton Icon="edit" ButtonStyle="ButtonStyle.Info" 
                                                 Variant="Variant.Flat" 
                                                 Size="ButtonSize.Small"
                                                 Title="Edit"
                                                 Click="@(() => EditExpertise(exp))" />
                                    <RadzenButton Icon="@(exp.IsActive ? "block" : "check")" 
                                                 ButtonStyle="@(exp.IsActive ? ButtonStyle.Warning : ButtonStyle.Success)" 
                                                 Variant="Variant.Flat" 
                                                 Size="ButtonSize.Small"
                                                 Title="@(exp.IsActive ? "Deactivate" : "Activate")"
                                                 Click="@(() => ToggleExpertiseStatus(exp))" />
                                </Template>
                            </RadzenDataGridColumn>
                        </Columns>
                    </RadzenDataGrid>
                }
            }
            else
            {
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Access Denied:</strong> You don't have permission to view this page.
                </div>
            }
        </div>
    </div>
</div>


@code {
    private RadzenDataGrid<SM_MentalHealthApp.Shared.Expertise>? grid;
    private List<SM_MentalHealthApp.Shared.Expertise> expertises = new();
    private bool isLoading = true;
    private SM_MentalHealthApp.Shared.Expertise? editingExpertise;

    protected override async Task OnInitializedAsync()
    {
        if (AuthService.CurrentUser?.RoleId == 3) // Admin
        {
            await LoadExpertises();
        }
    }

    private async Task LoadExpertises()
    {
        try
        {
            isLoading = true;
            StateHasChanged();
            expertises = await ExpertiseService.GetAllExpertisesAsync(activeOnly: false);
            Console.WriteLine($"Loaded {expertises.Count} expertises");
            if (expertises.Count == 0)
            {
                NotificationService.Notify(NotificationSeverity.Info, "Info", "No expertise categories found. Click 'Add Expertise' to create one.");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading expertises: {ex}");
            NotificationService.Notify(NotificationSeverity.Error, "Error", $"Failed to load expertises: {ex.Message}");
            expertises = new List<SM_MentalHealthApp.Shared.Expertise>();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task ShowAddExpertiseForm()
    {
        editingExpertise = null;
        await OpenExpertiseDialog();
    }

    private async Task EditExpertise(SM_MentalHealthApp.Shared.Expertise expertise)
    {
        editingExpertise = expertise;
        await OpenExpertiseDialog();
    }

    private async Task OpenExpertiseDialog()
    {
        try
        {
            var result = await DialogService.OpenAsync<ExpertiseDialog>(
                editingExpertise == null ? "Add Expertise" : "Edit Expertise",
                new Dictionary<string, object>
                {
                    { "EditingExpertise", editingExpertise }
                },
                new DialogOptions
                {
                    Width = "500px",
                    Resizable = true,
                    Draggable = true
                });

            if (result == true)
            {
                await LoadExpertises();
            }
        }
        catch (Exception ex)
        {
            NotificationService.Notify(NotificationSeverity.Error, "Error", $"Failed to open dialog: {ex.Message}");
        }
    }

    private async Task ToggleExpertiseStatus(SM_MentalHealthApp.Shared.Expertise expertise)
    {
        var action = expertise.IsActive ? "deactivate" : "activate";
        var confirm = await DialogService.Confirm(
            $"Are you sure you want to {action} '{expertise.Name}'?",
            $"{(expertise.IsActive ? "Deactivate" : "Activate")} Expertise",
            new ConfirmOptions { OkButtonText = "Yes", CancelButtonText = "No" });

        if (confirm == true)
        {
            try
            {
                var updated = await ExpertiseService.UpdateExpertiseAsync(
                    expertise.Id, 
                    expertise.Name, 
                    expertise.Description, 
                    !expertise.IsActive);
                
                if (updated != null)
                {
                    NotificationService.Notify(NotificationSeverity.Success, "Success", 
                        $"Expertise '{updated.Name}' {(updated.IsActive ? "activated" : "deactivated")} successfully");
                    await LoadExpertises();
                    if (grid != null)
                    {
                        await grid.Reload();
                    }
                }
                else
                {
                    NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to update expertise");
                }
            }
            catch (Exception ex)
            {
                NotificationService.Notify(NotificationSeverity.Error, "Error", $"Failed to update expertise: {ex.Message}");
            }
        }
    }
}

