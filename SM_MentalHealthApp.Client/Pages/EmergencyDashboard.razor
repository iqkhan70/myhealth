@page "/emergency-dashboard"
@using SM_MentalHealthApp.Shared
@using SM_MentalHealthApp.Client.Services
@using SM_MentalHealthApp.Client.Components.Grid
@using SM_MentalHealthApp.Client.Components.Common
@using SM_MentalHealthApp.Client.Helpers
@using Radzen
@using Radzen.Blazor
@inject IEmergencyService EmergencyService
@inject NotificationService NotificationService
@inject IAuthService AuthService
@inject IJSRuntime JSRuntime
@implements IDisposable

<PageTitle>Emergency Dashboard</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <SMPageHeader Title="Emergency Dashboard" 
                         Icon="fas fa-exclamation-triangle" 
                         Description="Monitor and respond to client emergency incidents" />

            @if (AuthService.CurrentUser?.RoleId == 2 || AuthService.CurrentUser?.RoleId == 3) // Doctor or Admin
            {
                <!-- Emergency Stats -->
                <div class="emergency-stats mb-4">
                    <div class="stat-card critical">
                        <span class="stat-number">@criticalCount</span>
                        <span class="stat-label">Critical</span>
                    </div>
                    <div class="stat-card high">
                        <span class="stat-number">@highCount</span>
                        <span class="stat-label">High</span>
                    </div>
                    <div class="stat-card total">
                        <span class="stat-number">@totalIncidents</span>
                        <span class="stat-label">Total</span>
                    </div>
                </div>

                <!-- Controls -->
                <div class="emergency-controls mb-4">
                    <RadzenButton Text="üîÑ Refresh" Icon="refresh" ButtonStyle="ButtonStyle.Light" 
                        Click="@RefreshIncidents" Disabled="@isLoading" />
                    <div class="auto-refresh-indicator">
                        <span class="refresh-icon">‚ö°</span>
                        <span>Auto-refresh every 30s</span>
                    </div>
                </div>

                <!-- Emergency Incidents Grid -->
                <div class="incidents-section">
                    <SMDataGrid TItem="EmergencyAlert" 
                               Columns="_columns" 
                               Actions="_actions" 
                               ActionsWidth="150px"
                               LoadItems="LoadIncidentsAsync" 
                               @ref="_grid" 
                               PageSize="10"
                               OnRowExpandCallback="@OnRowExpand">
                        <ExpansionTemplate Context="incident">
                            @{
                                var expandedIncident = expandedIncidents.ContainsKey(incident.Id) ? expandedIncidents[incident.Id] : incident;
                            }
                            <div class="p-3">
                                <div class="row">
                                    <div class="col-12">
                                        <h6>Emergency Details</h6>
                                        
                                        <!-- Emergency Message -->
                                        <div class="detail-section mb-3">
                                            <h6>üìù Emergency Message</h6>
                                            @if (!string.IsNullOrEmpty(expandedIncident.Message))
                                            {
                                                <div class="message-content">@expandedIncident.Message</div>
                                            }
                                            else
                                            {
                                                <div class="no-message">No message provided</div>
                                            }
                                        </div>
                                        
                                        <!-- Vital Signs -->
                                        @if (expandedIncident.VitalSigns != null)
                                        {
                                            <div class="detail-section mb-3">
                                                <h6>üíì Vital Signs</h6>
                                                <div class="vitals-grid">
                                                    @if (expandedIncident.VitalSigns.HeartRate.HasValue)
                                                    {
                                                        <div class="vital-card">
                                                            <div class="vital-label">Heart Rate</div>
                                                            <div class="vital-value @GetVitalStatus(expandedIncident.VitalSigns.HeartRate, "heartRate")">
                                                                @expandedIncident.VitalSigns.HeartRate bpm
                                                            </div>
                                                        </div>
                                                    }
                                                    @if (!string.IsNullOrEmpty(expandedIncident.VitalSigns.BloodPressure))
                                                    {
                                                        <div class="vital-card">
                                                            <div class="vital-label">Blood Pressure</div>
                                                            <div class="vital-value @GetVitalStatus(expandedIncident.VitalSigns.BloodPressure, "bloodPressure")">
                                                                @expandedIncident.VitalSigns.BloodPressure
                                                            </div>
                                                        </div>
                                                    }
                                                    @if (expandedIncident.VitalSigns.Temperature.HasValue)
                                                    {
                                                        <div class="vital-card">
                                                            <div class="vital-label">Temperature</div>
                                                            <div class="vital-value @GetVitalStatus(expandedIncident.VitalSigns.Temperature, "temperature")">
                                                                @expandedIncident.VitalSigns.Temperature¬∞F
                                                            </div>
                                                        </div>
                                                    }
                                                    @if (expandedIncident.VitalSigns.OxygenSaturation.HasValue)
                                                    {
                                                        <div class="vital-card">
                                                            <div class="vital-label">Oxygen Saturation</div>
                                                            <div class="vital-value @GetVitalStatus(expandedIncident.VitalSigns.OxygenSaturation, "oxygenSaturation")">
                                                                @expandedIncident.VitalSigns.OxygenSaturation%
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        }
                                        
                                        <!-- Location Information -->
                                        @if (expandedIncident.Location != null)
                                        {
                                            <div class="detail-section mb-3">
                                                <h6>üìç Location Information</h6>
                                                <div class="location-details">
                                                    <div class="coordinates">
                                                        <strong>Coordinates:</strong> @expandedIncident.Location.Latitude.ToString("F6"), @expandedIncident.Location.Longitude.ToString("F6")
                                                    </div>
                                                    @if (!string.IsNullOrEmpty(expandedIncident.Location.Address))
                                                    {
                                                        <div class="address">
                                                            <strong>Address:</strong> @expandedIncident.Location.Address
                                                        </div>
                                                    }
                                                    @if (expandedIncident.Location.Accuracy.HasValue)
                                                    {
                                                        <div class="accuracy">
                                                            <strong>Accuracy:</strong> ¬±@expandedIncident.Location.Accuracy.Value.ToString("F1") meters
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </ExpansionTemplate>
                    </SMDataGrid>
                </div>
            }
            else
            {
                <div class="access-denied">
                    <h3>Access Denied</h3>
                    <p>You don't have permission to view emergency incidents.</p>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private SMDataGrid<EmergencyAlert>? _grid;
    private List<EmergencyAlert> incidents = new();
    private bool isLoading = false;
    private bool isProcessing = false;
    private System.Threading.Timer? _refreshTimer;
    private Dictionary<int, EmergencyAlert> expandedIncidents = new();

    private List<SMDataGridColumn<EmergencyAlert>> _columns = new();
    private List<SMDataGridActionButton<EmergencyAlert>> _actions = new();

    private int criticalCount => incidents.Count(i => i.Severity == "Critical");
    private int highCount => incidents.Count(i => i.Severity == "High");
    private int totalIncidents => incidents.Count;

    protected override async Task OnInitializedAsync()
    {
        InitializeColumns();
        InitializeActions();
        StartAutoRefresh();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender && _grid != null)
        {
            StateHasChanged();
        }
    }

    private void InitializeColumns()
    {
        _columns = new List<SMDataGridColumn<EmergencyAlert>>
        {
            new SMDataGridTemplateColumn<EmergencyAlert>
            {
                Property = nameof(EmergencyAlert.EmergencyType),
                Title = "Type",
                Width = "120px",
                Template = incident => builder =>
                {
                    builder.OpenElement(0, "div");
                    builder.AddAttribute(1, "class", "incident-type-cell");
                    builder.OpenElement(2, "span");
                    var iconClass = (incident.EmergencyType == "Emergency" || string.IsNullOrEmpty(incident.EmergencyType)) 
                        ? "type-icon emergency-icon" 
                        : "type-icon";
                    builder.AddAttribute(3, "class", iconClass);
                    builder.AddMarkupContent(4, GetTypeIcon(incident.EmergencyType));
                    builder.CloseElement();
                    builder.OpenElement(5, "span");
                    builder.AddAttribute(6, "class", "type-name");
                    builder.AddContent(7, incident.EmergencyType);
                    builder.CloseElement();
                    builder.CloseElement();
                }
            },
            new SMDataGridTemplateColumn<EmergencyAlert>
            {
                Property = nameof(EmergencyAlert.Severity),
                Title = "Severity",
                Width = "100px",
                Template = incident => builder =>
                {
                    builder.OpenElement(0, "span");
                    builder.AddAttribute(1, "class", $"severity-badge {incident.Severity.ToLower()}");
                    builder.AddContent(2, incident.Severity);
                    builder.CloseElement();
                }
            },
            new SMDataGridTemplateColumn<EmergencyAlert>
            {
                Property = nameof(EmergencyAlert.PatientName),
                Title = "Patient",
                Width = "200px",
                Template = incident => builder =>
                {
                    builder.OpenElement(0, "div");
                    builder.AddAttribute(1, "class", "patient-info");
                    builder.OpenElement(2, "strong");
                    builder.AddContent(3, incident.PatientName);
                    builder.CloseElement();
                    builder.OpenElement(4, "div");
                    builder.AddAttribute(5, "class", "patient-email");
                    builder.AddContent(6, incident.PatientEmail);
                    builder.CloseElement();
                    builder.CloseElement();
                }
            },
            new SMDataGridTemplateColumn<EmergencyAlert>
            {
                Property = nameof(EmergencyAlert.Timestamp),
                Title = "Time",
                Width = "150px",
                Template = incident => builder =>
                {
                    builder.OpenElement(0, "div");
                    builder.AddAttribute(1, "class", "timestamp-cell");
                    builder.AddContent(2, incident.Timestamp.ToString("MMM dd, HH:mm"));
                    builder.OpenElement(3, "div");
                    builder.AddAttribute(4, "class", "timestamp-date");
                    builder.AddContent(5, incident.Timestamp.ToString("yyyy"));
                    builder.CloseElement();
                    builder.CloseElement();
                }
            },
            new SMDataGridColumn<EmergencyAlert>
            {
                Property = nameof(EmergencyAlert.DeviceId),
                Title = "Device",
                Width = "120px"
            },
            new SMDataGridTemplateColumn<EmergencyAlert>
            {
                Property = nameof(EmergencyAlert.IsAcknowledged),
                Title = "Status",
                Width = "120px",
                Template = incident => builder =>
                {
                    if (incident.IsAcknowledged)
                    {
                        builder.OpenElement(0, "div");
                        builder.AddAttribute(1, "class", "acknowledged-status");
                        builder.OpenElement(2, "span");
                        builder.AddAttribute(3, "class", "acknowledged-badge");
                        builder.AddContent(4, "‚úÖ Acknowledged");
                        builder.CloseElement();
                        if (incident.AcknowledgedAt.HasValue)
                        {
                            builder.OpenElement(5, "div");
                            builder.AddAttribute(6, "class", "acknowledged-time");
                            builder.AddContent(7, incident.AcknowledgedAt.Value.ToString("MMM dd, HH:mm"));
                            builder.CloseElement();
                        }
                        builder.CloseElement();
                    }
                    else
                    {
                        builder.OpenElement(0, "span");
                        builder.AddAttribute(1, "class", "unacknowledged-badge");
                        builder.AddContent(2, "‚ö†Ô∏è Pending");
                        builder.CloseElement();
                    }
                }
            },
            new SMDataGridTemplateColumn<EmergencyAlert>
            {
                Property = nameof(EmergencyAlert.Location),
                Title = "Location",
                Width = "150px",
                Template = incident => builder =>
                {
                    if (incident.Location != null)
                    {
                        builder.OpenElement(0, "div");
                        builder.AddAttribute(1, "class", "location-cell");
                        builder.OpenElement(2, "div");
                        builder.AddAttribute(3, "class", "coordinates");
                        builder.AddContent(4, $"{incident.Location.Latitude:F4}, {incident.Location.Longitude:F4}");
                        builder.CloseElement();
                        if (!string.IsNullOrEmpty(incident.Location.Address))
                        {
                            builder.OpenElement(5, "div");
                            builder.AddAttribute(6, "class", "address");
                            builder.AddContent(7, incident.Location.Address);
                            builder.CloseElement();
                        }
                        builder.CloseElement();
                    }
                    else
                    {
                        builder.OpenElement(0, "span");
                        builder.AddAttribute(1, "class", "no-location");
                        builder.AddContent(2, "No location");
                        builder.CloseElement();
                    }
                }
            }
        };
    }

    private void InitializeActions()
    {
        _actions = new List<SMDataGridActionButton<EmergencyAlert>>
        {
            new SMDataGridActionButton<EmergencyAlert>
            {
                IconFunc = (incident) => incident.IsAcknowledged ? "undo" : "check",
                ButtonStyleFunc = (incident) => incident.IsAcknowledged ? ButtonStyle.Info : ButtonStyle.Success,
                Variant = Variant.Flat,
                Size = ButtonSize.Small,
                TooltipFunc = (incident) => incident.IsAcknowledged 
                    ? $"Un-acknowledge emergency incident (Acknowledged on: {incident.AcknowledgedAt?.ToString("MM/dd/yyyy HH:mm") ?? "Unknown"})"
                    : "Acknowledge emergency incident",
                OnClick = async (incident, ct) => 
                {
                    if (incident.IsAcknowledged)
                    {
                        await UnacknowledgeIncidentAsync(incident, ct);
                    }
                    else
                    {
                        await AcknowledgeIncidentAsync(incident, ct);
                    }
                },
                Disabled = (incident) => isProcessing
            }
        };
    }

    private async Task<IEnumerable<EmergencyAlert>> LoadIncidentsAsync(CancellationToken ct)
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            int? doctorId = null;
            if (AuthService.CurrentUser?.RoleId == 2) // Doctor
            {
                doctorId = AuthService.CurrentUser.Id;
            }
            else if (AuthService.CurrentUser?.RoleId == 3) // Admin
            {
                doctorId = AuthService.CurrentUser.Id; // Admin can see all via their ID
            }

            var loadedIncidents = await EmergencyService.ListAsync(doctorId, ct);
            incidents = loadedIncidents?.ToList() ?? new List<EmergencyAlert>();
            return incidents;
        }
        catch (Exception ex)
        {
            NotificationService.ShowError($"Failed to load emergency incidents: {ex.Message}");
            return new List<EmergencyAlert>();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task OnRowExpand(EmergencyAlert incident)
    {
        try
        {
            if (!expandedIncidents.ContainsKey(incident.Id))
            {
                var fullIncident = await EmergencyService.GetAsync(incident.Id);
                if (fullIncident != null)
                {
                    expandedIncidents[incident.Id] = fullIncident;
                    StateHasChanged();
                }
            }
        }
        catch (Exception ex)
        {
            NotificationService.ShowError($"Failed to load incident details: {ex.Message}");
        }
    }

    private async Task AcknowledgeIncidentAsync(EmergencyAlert incident, CancellationToken ct)
    {
        var details = $"Type: {incident.EmergencyType}\n" +
                     $"Severity: {incident.Severity}\n" +
                     $"Patient: {incident.PatientName}\n" +
                     $"Time: {incident.Timestamp:MMM dd, yyyy 'at' h:mm tt}";
        
        var confirmed = await JSRuntime.ConfirmDestructiveAsync("acknowledge this emergency incident", details, "emergency incident");

        if (!confirmed) return;

        try
        {
            isProcessing = true;
            StateHasChanged();

            var doctorId = AuthService.CurrentUser?.Id ?? 0;
            var success = await EmergencyService.AcknowledgeAsync(
                incident.Id, 
                doctorId, 
                "Incident acknowledged", 
                "Monitoring patient", 
                ct);

            if (success)
            {
                NotificationService.ShowSuccess("Incident acknowledged successfully");

                if (_grid != null)
                {
                    await _grid.RefreshAsync();
                }
            }
            else
            {
                NotificationService.ShowError("Failed to acknowledge incident");
            }
        }
        catch (Exception ex)
        {
            NotificationService.ShowError($"Failed to acknowledge incident: {ex.Message}");
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    private async Task UnacknowledgeIncidentAsync(EmergencyAlert incident, CancellationToken ct)
    {
        var details = $"Type: {incident.EmergencyType}\n" +
                     $"Severity: {incident.Severity}\n" +
                     $"Patient: {incident.PatientName}\n" +
                     $"Acknowledged: {incident.AcknowledgedAt?.ToString("MMM dd, yyyy 'at' h:mm tt")}";

        var confirmed = await JSRuntime.ConfirmDestructiveAsync("un-acknowledge this emergency incident", details, "emergency incident");

        if (!confirmed) return;

        try
        {
            isProcessing = true;
            StateHasChanged();

            var success = await EmergencyService.UnacknowledgeAsync(incident.Id, ct);

            if (success)
            {
                NotificationService.ShowSuccess("Incident un-acknowledged successfully. It will now be included in AI health checks.");

                if (_grid != null)
                {
                    await _grid.RefreshAsync();
                }
            }
            else
            {
                NotificationService.ShowError("Failed to un-acknowledge incident");
            }
        }
        catch (Exception ex)
        {
            NotificationService.ShowError($"Failed to un-acknowledge incident: {ex.Message}");
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    private async Task RefreshIncidents()
    {
        if (_grid != null)
        {
            await _grid.RefreshAsync();
        }
    }

    private void StartAutoRefresh()
    {
        _refreshTimer = new System.Threading.Timer(async _ =>
        {
            await InvokeAsync(async () =>
            {
                if (_grid != null)
                {
                    await _grid.RefreshAsync();
                }
            });
        }, null, TimeSpan.FromSeconds(30), TimeSpan.FromSeconds(30));
    }

    public void Dispose()
    {
        _refreshTimer?.Dispose();
    }

    private string GetTypeIcon(string emergencyType)
    {
        return emergencyType switch
        {
            "Fall" => "ü¶Ω",
            "Cardiac" => "‚ù§Ô∏è",
            "Panic Attack" => "üò∞",
            "Seizure" => "‚ö°",
            "Overdose" => "üíä",
            "Self Harm" => "‚ö†Ô∏è",
            _ => "üö®"
        };
    }

    private string GetVitalStatus(object value, string vitalType)
    {
        if (value == null) return "vital-normal";

        try
        {
            return vitalType switch
            {
                "heartRate" when value is int hr => hr < 60 ? "vital-low" : hr > 100 ? "vital-high" : "vital-normal",
                "bloodPressure" when value is string bp => "vital-normal",
                "temperature" when value is double temp => temp < 97 ? "vital-low" : temp > 99.5 ? "vital-high" : "vital-normal",
                "oxygenSaturation" when value is int spo2 => spo2 < 95 ? "vital-low" : "vital-normal",
                _ => "vital-normal"
            };
        }
        catch
        {
            return "vital-normal";
        }
    }
}

