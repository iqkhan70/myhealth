@using SM_MentalHealthApp.Client.Services
@inject ISignalRService SignalRService
@inject NotificationService NotificationService
@inject IJSRuntime JS
@inject NavigationManager Navigation
@inject IAgoraService AgoraService

@if (IncomingCall != null)
{
    <div class="incoming-call-overlay">
        <div class="incoming-call-modal">
            <div class="call-header">
                <div class="caller-avatar">
                    @if (!string.IsNullOrEmpty(IncomingCall.CallerName))
                    {
                        @IncomingCall.CallerName.Substring(0, 1).ToUpper()
                    }
                    else
                    {
                        <text>?</text>
                    }
                </div>
                <div class="call-info">
                    <h3>@IncomingCall.CallerName</h3>
                    <p>@IncomingCall.CallerRole</p>
                    <p class="call-type">
                        @if (IncomingCall.CallType == "video")
                        {
                            <i class="fas fa-video"></i>
                    
                            <text> Video Call</text>
                        }
                        else
                        {
                            <i class="fas fa-phone"></i>
                    
                            <text> Audio Call</text>
                        }
                    </p>
                </div>
            </div>

            <div class="call-actions">
                <button class="btn-decline" @onclick="DeclineCall">
                    <i class="fas fa-phone-slash"></i>
                    Decline
                </button>
                <button class="btn-accept" @onclick="AcceptCall">
                    <i class="fas fa-phone"></i>
                    Accept
                </button>
            </div>

            <div class="call-timer">
                Incoming @IncomingCall.CallType call...
            </div>
        </div>
    </div>
}

<style>
    .incoming-call-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.8);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 10000;
        animation: fadeIn 0.3s ease-in-out;
    }

    .incoming-call-modal {
        background: white;
        border-radius: 20px;
        padding: 30px;
        text-align: center;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        min-width: 350px;
        animation: slideUp 0.3s ease-out;
    }

    .call-header {
        margin-bottom: 30px;
    }

    .caller-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: #2196F3;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 32px;
        font-weight: bold;
        margin: 0 auto 15px;
        animation: pulse 2s infinite;
    }

    .call-info h3 {
        margin: 0 0 5px;
        font-size: 24px;
        color: #333;
    }

    .call-info p {
        margin: 0 0 5px;
        color: #666;
        font-size: 16px;
    }

    .call-type {
        color: #2196F3 !important;
        font-weight: 600;
    }

    .call-type i {
        margin-right: 8px;
    }

    .call-actions {
        display: flex;
        justify-content: space-between;
        gap: 20px;
        margin-bottom: 20px;
    }

    .btn-decline,
    .btn-accept {
        flex: 1;
        padding: 15px 20px;
        border: none;
        border-radius: 50px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .btn-decline {
        background: #f44336;
        color: white;
    }

    .btn-decline:hover {
        background: #d32f2f;
        transform: translateY(-2px);
    }

    .btn-accept {
        background: #4CAF50;
        color: white;
    }

    .btn-accept:hover {
        background: #388E3C;
        transform: translateY(-2px);
    }

    .call-timer {
        color: #666;
        font-size: 14px;
        animation: blink 1.5s infinite;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(50px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes pulse {
        0% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }

        100% {
            transform: scale(1);
        }
    }

    @@keyframes blink {

        0%,
        50% {
            opacity: 1;
        }

        51%,
        100% {
            opacity: 0.5;
        }
    }
</style>

@code {
    [Parameter] public CallInvitation? IncomingCall { get; set; }
    [Parameter] public EventCallback<CallInvitation> OnCallAccepted { get; set; }
    [Parameter] public EventCallback<CallInvitation> OnCallDeclined { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        if (IncomingCall != null)
        {
            // ‚úÖ Play incoming call sound
            try
            {
                await JS.InvokeVoidAsync("playIncomingCallSound");
                Console.WriteLine("üîî IncomingCallModal: Started playing ringtone");
            }
            catch (Exception ex)
            {
                Console.WriteLine($"‚ö†Ô∏è IncomingCallModal: Error playing ringtone: {ex.Message}");
            }
        }
        else
        {
            // ‚úÖ Stop ringtone if call is cleared
            try
            {
                await JS.InvokeVoidAsync("stopIncomingCallSound");
                Console.WriteLine("üîï IncomingCallModal: Stopped ringtone (call cleared)");
            }
            catch (Exception ex)
            {
                Console.WriteLine($"‚ö†Ô∏è IncomingCallModal: Error stopping ringtone: {ex.Message}");
            }
        }
    }

    private async Task AcceptCall()
    {
        if (IncomingCall == null)
        {
            Console.WriteLine("IncomingCall is null in AcceptCall");
            return;
        }

        try
        {
            // ‚úÖ Stop the ringtone
            try
            {
                await JS.InvokeVoidAsync("stopIncomingCallSound");
                Console.WriteLine("üîï IncomingCallModal: Stopped ringtone (call accepted)");
            }
            catch (Exception ex)
            {
                Console.WriteLine($"‚ö†Ô∏è IncomingCallModal: Error stopping ringtone: {ex.Message}");
            }
            
            if (SignalRService == null)
            {
                Console.WriteLine("SignalRService is null in AcceptCall");
            }
            else
            {
                await SignalRService.AcceptCallAsync(IncomingCall.CallId);
            }

            if (OnCallAccepted.HasDelegate)
            {
                await OnCallAccepted.InvokeAsync(IncomingCall);
            }

            try
            {
                NotificationService?.Notify(NotificationSeverity.Success, "Call Accepted",
                    $"Accepted {IncomingCall.CallType} call from {IncomingCall.CallerName}");
            }
            catch (Exception notifEx)
            {
                Console.WriteLine($"NotificationService failed in AcceptCall: {notifEx.Message}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error in AcceptCall: {ex.Message}\n{ex}");
            try
            {
                NotificationService?.Notify(NotificationSeverity.Error, "Call Error",
                    $"Failed to accept call: {ex.Message}");
            }
            catch { }
        }
    }

    private async Task DeclineCall()
    {
        if (IncomingCall == null)
        {
            Console.WriteLine("IncomingCall is null in DeclineCall");
            return;
        }

        var callId = IncomingCall.CallId;
        var callType = IncomingCall.CallType;
        var callerName = IncomingCall.CallerName;

        Console.WriteLine($"üìû ========== IncomingCallModal: DeclineCall called ==========");
        Console.WriteLine($"üìû IncomingCallModal: CallId: {callId}, CallType: {callType}, CallerName: {callerName}");

        try
        {
            // ‚úÖ Stop the ringtone (wrap in try-catch to prevent AudioContext errors from blocking)
            try
            {
                await JS.InvokeVoidAsync("stopIncomingCallSound");
                Console.WriteLine("üîï IncomingCallModal: Stopped ringtone (call declined)");
            }
            catch (Exception ex)
            {
                Console.WriteLine($"‚ö†Ô∏è IncomingCallModal: Error stopping ringtone (non-critical): {ex.Message}");
                // Don't fail the decline if ringtone stop fails
            }
            
            // ‚úÖ Notify the caller that call was rejected FIRST (before cleanup)
            if (SignalRService == null)
            {
                Console.WriteLine("‚ö†Ô∏è IncomingCallModal: SignalRService is null in DeclineCall");
            }
            else
            {
                try
                {
                    Console.WriteLine($"üìû IncomingCallModal: Sending rejection via SignalR for callId: {callId}");
                    await SignalRService.RejectCallAsync(callId);
                    Console.WriteLine($"‚úÖ IncomingCallModal: Rejection sent successfully");
                }
                catch (Exception rejectEx)
                {
                    Console.WriteLine($"‚ùå IncomingCallModal: Error sending rejection: {rejectEx.Message}");
                    Console.WriteLine($"‚ùå IncomingCallModal: Stack trace: {rejectEx.StackTrace}");
                    // Continue with cleanup even if rejection fails
                }
            }
            
            // ‚úÖ Check if receiver is on the call page (AudioCall/VideoCall) - if so, leave Agora and navigate back
            var currentUri = Navigation.Uri;
            var isOnAudioCallPage = currentUri.Contains("/audio-call/");
            var isOnVideoCallPage = currentUri.Contains("/video-call/");
            
            if (isOnAudioCallPage || isOnVideoCallPage)
            {
                Console.WriteLine($"üìû IncomingCallModal: Receiver is on call page, leaving Agora and navigating back...");
                try
                {
                    // Leave Agora channel if connected
                    if (AgoraService.IsInCall)
                    {
                        await AgoraService.LeaveChannelAsync();
                        Console.WriteLine("‚úÖ IncomingCallModal: Left Agora channel");
                    }
                }
                catch (Exception ex)
                {
                    Console.WriteLine($"‚ö†Ô∏è IncomingCallModal: Error leaving Agora channel: {ex.Message}");
                }
                
                // Navigate back to chat
                await Task.Delay(300); // Small delay for cleanup
                Navigation.NavigateTo("/real-time-chat");
            }

            // ‚úÖ Clear the incoming call and notify parent component
            if (OnCallDeclined.HasDelegate)
            {
                try
                {
                    await OnCallDeclined.InvokeAsync(IncomingCall);
                    Console.WriteLine("‚úÖ IncomingCallModal: OnCallDeclined event fired");
                }
                catch (Exception ex)
                {
                    Console.WriteLine($"‚ö†Ô∏è IncomingCallModal: Error firing OnCallDeclined: {ex.Message}");
                }
            }

            // ‚úÖ Show notification
            try
            {
                NotificationService?.Notify(NotificationSeverity.Info, "Call Declined",
                    $"Declined {callType} call from {callerName}");
            }
            catch (Exception notifEx)
            {
                Console.WriteLine($"‚ö†Ô∏è IncomingCallModal: NotificationService failed: {notifEx.Message}");
            }
            
            Console.WriteLine($"‚úÖ IncomingCallModal: DeclineCall completed successfully");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"‚ùå IncomingCallModal: Error in DeclineCall: {ex.Message}");
            Console.WriteLine($"‚ùå IncomingCallModal: Stack trace: {ex.StackTrace}");
            try
            {
                NotificationService?.Notify(NotificationSeverity.Error, "Call Error",
                    $"Failed to decline call: {ex.Message}");
            }
            catch { }
        }
        Console.WriteLine($"üìû ========== End IncomingCallModal: DeclineCall ==========");
    }
}
