@using SM_MentalHealthApp.Client.Services
@implements IDisposable
@inject ISignalRService SignalRService
@inject NotificationService NotificationService
@inject IJSRuntime JS
@inject NavigationManager Navigation
@inject IAgoraService AgoraService

@if (IncomingCall != null)
{
    <div class="incoming-call-overlay">
        <div class="incoming-call-modal">
            <div class="call-header">
                <div class="caller-avatar">
                    @if (!string.IsNullOrEmpty(IncomingCall.CallerName))
                    {
                        @IncomingCall.CallerName.Substring(0, 1).ToUpper()
                    }
                    else
                    {
                        <text>?</text>
                    }
                </div>
                <div class="call-info">
                    <h3>@IncomingCall.CallerName</h3>
                    <p>@IncomingCall.CallerRole</p>
                    <p class="call-type">
                        @if (IncomingCall.CallType == "video")
                        {
                            <i class="fas fa-video"></i>

                            <text> Video Call</text>
                        }
                        else
                        {
                            <i class="fas fa-phone"></i>

                            <text> Audio Call</text>
                        }
                    </p>
                </div>
            </div>

            <div class="call-actions">
                <button class="btn-decline" @onclick="DeclineCall">
                    <i class="fas fa-phone-slash"></i>
                    Decline
                </button>
                <button class="btn-accept" @onclick="AcceptCall">
                    <i class="fas fa-phone"></i>
                    Accept
                </button>
            </div>

            <div class="call-timer">
                Incoming @IncomingCall.CallType call...
            </div>
        </div>
    </div>
}

<style>
    .incoming-call-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.8);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 10000;
        animation: fadeIn 0.3s ease-in-out;
    }

    .incoming-call-modal {
        background: white;
        border-radius: 20px;
        padding: 30px;
        text-align: center;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        min-width: 350px;
        animation: slideUp 0.3s ease-out;
    }

    .call-header {
        margin-bottom: 30px;
    }

    .caller-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: #2196F3;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 32px;
        font-weight: bold;
        margin: 0 auto 15px;
        animation: pulse 2s infinite;
    }

    .call-info h3 {
        margin: 0 0 5px;
        font-size: 24px;
        color: #333;
    }

    .call-info p {
        margin: 0 0 5px;
        color: #666;
        font-size: 16px;
    }

    .call-type {
        color: #2196F3 !important;
        font-weight: 600;
    }

    .call-type i {
        margin-right: 8px;
    }

    .call-actions {
        display: flex;
        justify-content: space-between;
        gap: 20px;
        margin-bottom: 20px;
    }

    .btn-decline,
    .btn-accept {
        flex: 1;
        padding: 15px 20px;
        border: none;
        border-radius: 50px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .btn-decline {
        background: #f44336;
        color: white;
    }

    .btn-decline:hover {
        background: #d32f2f;
        transform: translateY(-2px);
    }

    .btn-accept {
        background: #4CAF50;
        color: white;
    }

    .btn-accept:hover {
        background: #388E3C;
        transform: translateY(-2px);
    }

    .call-timer {
        color: #666;
        font-size: 14px;
        animation: blink 1.5s infinite;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(50px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes pulse {
        0% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }

        100% {
            transform: scale(1);
        }
    }

    @@keyframes blink {

        0%,
        50% {
            opacity: 1;
        }

        51%,
        100% {
            opacity: 0.5;
        }
    }
</style>

@code {
    [Parameter] public CallInvitation? IncomingCall { get; set; }
    [Parameter] public EventCallback<CallInvitation> OnCallAccepted { get; set; }
    [Parameter] public EventCallback<CallInvitation> OnCallDeclined { get; set; }

    private System.Threading.Timer? _timeoutTimer;
    private const int TIMEOUT_SECONDS = 15;

    protected override async Task OnParametersSetAsync()
    {
        if (IncomingCall != null)
        {
            // ✅ Play incoming call sound
            try
            {
                await JS.InvokeVoidAsync("playIncomingCallSound");
            }
            catch (Exception ex)
            {
                Console.WriteLine($"⚠️ IncomingCallModal: Error playing ringtone: {ex.Message}");
            }

            // ✅ Start timeout timer - close dialog after 15 seconds if not answered
            StartTimeoutTimer();
        }
        else
        {
            // ✅ Stop ringtone if call is cleared
            try
            {
                await JS.InvokeVoidAsync("stopIncomingCallSound");
            }
            catch (Exception ex)
            {
                Console.WriteLine($"⚠️ IncomingCallModal: Error stopping ringtone: {ex.Message}");
            }

            // ✅ Stop timeout timer
            StopTimeoutTimer();
        }
    }

    private void StartTimeoutTimer()
    {
        StopTimeoutTimer(); // Clear any existing timer

        _timeoutTimer = new System.Threading.Timer(_ =>
        {
            // ✅ Use Task.Run to handle async operations in timer callback
            Task.Run(async () =>
    {
            try
            {
            // Stop ringtone
                try
                {
                    await JS.InvokeVoidAsync("stopIncomingCallSound");
                }
                catch (Exception ex)
                {
                    Console.WriteLine($"⚠️ IncomingCallModal: Error stopping ringtone: {ex.Message}");
                }

            // ✅ Try to decline the call (notify caller), but don't fail if call session is gone
                if (IncomingCall != null)
                {
                    try
                    {
                        if (SignalRService != null)
                        {
                            await SignalRService.RejectCallAsync(IncomingCall.CallId);
                        }
                    }
                    catch (Exception rejectEx)
                    {
                        Console.WriteLine($"⚠️ IncomingCallModal: Error sending rejection (call may already be ended): {rejectEx.Message}");
                    // Continue to close dialog even if rejection fails
                    }
                }

            // ✅ ALWAYS close the dialog and clear the incoming call, regardless of rejection success
                if (IncomingCall != null)
                {
                    var callToDecline = IncomingCall; // Capture for async operation
                    await InvokeAsync(async () =>
            {
            if (OnCallDeclined.HasDelegate)
            {
                    // Fire the event to notify parent to clear the call
                await OnCallDeclined.InvokeAsync(callToDecline);
            }
        });
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"❌ IncomingCallModal: Error in timeout handler: {ex.Message}");
            }
        });
        }, null, TimeSpan.FromSeconds(TIMEOUT_SECONDS), Timeout.InfiniteTimeSpan);

    }

    private void StopTimeoutTimer()
    {
        if (_timeoutTimer != null)
        {
            _timeoutTimer.Dispose();
            _timeoutTimer = null;
        }
    }

    public void Dispose()
    {
        StopTimeoutTimer();
    }

    private async Task AcceptCall()
    {
        if (IncomingCall == null)
        {
            return;
        }

        // ✅ Stop timeout timer since call was accepted
        StopTimeoutTimer();

        try
        {
            // ✅ Stop the ringtone
            try
            {
                await JS.InvokeVoidAsync("stopIncomingCallSound");
            }
            catch (Exception ex)
            {
                Console.WriteLine($"⚠️ IncomingCallModal: Error stopping ringtone: {ex.Message}");
            }

            if (SignalRService == null)
            {
                Console.WriteLine("SignalRService is null in AcceptCall");
            }
            else
            {
                await SignalRService.AcceptCallAsync(IncomingCall.CallId);
            }

            if (OnCallAccepted.HasDelegate)
            {
                await OnCallAccepted.InvokeAsync(IncomingCall);
            }

            try
            {
                NotificationService?.Notify(NotificationSeverity.Success, "Call Accepted",
                $"Accepted {IncomingCall.CallType} call from {IncomingCall.CallerName}");
            }
            catch (Exception notifEx)
            {
                Console.WriteLine($"NotificationService failed in AcceptCall: {notifEx.Message}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error in AcceptCall: {ex.Message}\n{ex}");
            try
            {
                NotificationService?.Notify(NotificationSeverity.Error, "Call Error",
                $"Failed to accept call: {ex.Message}");
            }
            catch { }
        }
    }

    private async Task DeclineCall()
    {
        if (IncomingCall == null)
        {
            Console.WriteLine("IncomingCall is null in DeclineCall");
            return;
        }

        // ✅ Stop timeout timer since call was declined
        StopTimeoutTimer();

        var callId = IncomingCall.CallId;
        var callType = IncomingCall.CallType;
        var callerName = IncomingCall.CallerName;

        try
        {
            // ✅ Stop the ringtone (wrap in try-catch to prevent AudioContext errors from blocking)
            try
            {
                await JS.InvokeVoidAsync("stopIncomingCallSound");
            }
            catch (Exception ex)
            {
                Console.WriteLine($"⚠️ IncomingCallModal: Error stopping ringtone (non-critical): {ex.Message}");
                // Don't fail the decline if ringtone stop fails
            }

            // ✅ Notify the caller that call was rejected FIRST (before cleanup)
            if (SignalRService == null)
            {
                Console.WriteLine("⚠️ IncomingCallModal: SignalRService is null in DeclineCall");
            }
            else
            {
                try
                {
                    await SignalRService.RejectCallAsync(callId);
                }
                catch (Exception rejectEx)
                {
                    Console.WriteLine($"❌ IncomingCallModal: Error sending rejection: {rejectEx.Message}");
                    Console.WriteLine($"❌ IncomingCallModal: Stack trace: {rejectEx.StackTrace}");
                    // Continue with cleanup even if rejection fails
                }
            }

            // ✅ Check if receiver is on the call page (AudioCall/VideoCall) - if so, leave Agora and navigate back
            var currentUri = Navigation.Uri;
            var isOnAudioCallPage = currentUri.Contains("/audio-call/");
            var isOnVideoCallPage = currentUri.Contains("/video-call/");

            if (isOnAudioCallPage || isOnVideoCallPage)
            {
                try
                {
                    // Leave Agora channel if connected
                    if (AgoraService.IsInCall)
                    {
                        await AgoraService.LeaveChannelAsync();
                    }
                }
                catch (Exception ex)
                {
                    Console.WriteLine($"⚠️ IncomingCallModal: Error leaving Agora channel: {ex.Message}");
                }

                // Navigate back to chat
                await Task.Delay(300); // Small delay for cleanup
                Navigation.NavigateTo("/real-time-chat");
            }

            // ✅ Clear the incoming call and notify parent component
            if (OnCallDeclined.HasDelegate)
            {
                try
                {
                    await OnCallDeclined.InvokeAsync(IncomingCall);
                }
                catch (Exception ex)
                {
                    Console.WriteLine($"⚠️ IncomingCallModal: Error firing OnCallDeclined: {ex.Message}");
                }
            }

            // ✅ Show notification
            try
            {
                NotificationService?.Notify(NotificationSeverity.Info, "Call Declined",
                $"Declined {callType} call from {callerName}");
            }
            catch (Exception notifEx)
            {
                Console.WriteLine($"⚠️ IncomingCallModal: NotificationService failed: {notifEx.Message}");
            }

        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ IncomingCallModal: Error in DeclineCall: {ex.Message}");
            Console.WriteLine($"❌ IncomingCallModal: Stack trace: {ex.StackTrace}");
            try
            {
                NotificationService?.Notify(NotificationSeverity.Error, "Call Error",
                $"Failed to decline call: {ex.Message}");
            }
            catch { }
        }
    }
}
