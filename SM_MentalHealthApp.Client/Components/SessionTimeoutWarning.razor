@using SM_MentalHealthApp.Client.Services
@using Microsoft.AspNetCore.Components
@inject IAuthService AuthService
@inject ISessionTimeoutService SessionTimeoutService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@implements IDisposable

@if (showWarning)
{
    <div class="session-timeout-overlay">
        <div class="session-timeout-dialog">
            <div class="session-timeout-header">
                <h4>⚠️ Session Timeout Warning</h4>
            </div>
            <div class="session-timeout-body">
                <p>Your session will expire in <strong>@remainingMinutes minute(s)</strong> due to inactivity.</p>
                <p>Click "Stay Logged In" to continue your session.</p>
            </div>
            <div class="session-timeout-footer">
                <button class="btn btn-primary" @onclick="StayLoggedIn">Stay Logged In</button>
                <button class="btn btn-secondary" @onclick="LogoutNow">Logout Now</button>
            </div>
        </div>
    </div>
}

@code {
    private bool showWarning = false;
    private int remainingMinutes = 5;

    protected override void OnInitialized()
    {
        SessionTimeoutService.OnTimeoutWarning += HandleTimeoutWarning;
    }

    private void HandleTimeoutWarning(int minutesRemaining)
    {
        remainingMinutes = minutesRemaining;
        showWarning = true;
        InvokeAsync(StateHasChanged);
    }

    public void ShowWarning(int minutesRemaining)
    {
        remainingMinutes = minutesRemaining;
        showWarning = true;
        StateHasChanged();
    }

    public void HideWarning()
    {
        showWarning = false;
        StateHasChanged();
    }

    private void StayLoggedIn()
    {
        showWarning = false;
        SessionTimeoutService.Reset(); // Reset the timeout timer
        StateHasChanged();
    }

    private async Task LogoutNow()
    {
        showWarning = false;
        SessionTimeoutService.Stop(); // Stop the timeout service
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/login", forceLoad: true);
    }

    public void Dispose()
    {
        SessionTimeoutService.OnTimeoutWarning -= HandleTimeoutWarning;
    }
}

