@using SM_MentalHealthApp.Shared
@using SM_MentalHealthApp.Client.Services
@inject IServiceRequestService ServiceRequestService
@inject NotificationService NotificationService
@inject DialogService DialogService

<div class="p-3">
    <RadzenFieldset Text="Assign SME to Service Request">
        <div class="mb-3">
            <label class="form-label">
                <strong>Service Request:</strong> @ServiceRequest.Title
            </label>
        </div>
        <div class="mb-3">
            <label class="form-label">
                <strong>Client:</strong> @ServiceRequest.ClientName
            </label>
        </div>

        @if (ServiceRequest.ExpertiseNames != null && ServiceRequest.ExpertiseNames.Any())
        {
            <div class="mb-3">
                <label class="form-label"><strong>Required Expertise:</strong></label>
                <div>
                    @foreach (var expertiseName in ServiceRequest.ExpertiseNames)
                    {
                        <span class="badge bg-info me-1 mb-1">@expertiseName</span>
                    }
                </div>
            </div>
        }

        @if (recommendations != null && recommendations.Any())
        {
            <div class="mb-3">
                <label class="form-label"><strong>Recommended SMEs (sorted by expertise match & score):</strong></label>
                <div class="table-responsive" style="max-height: 300px; overflow-y: auto;">
                    <table class="table table-sm table-hover">
                        <thead>
                            <tr>
                                <th>SME</th>
                                <th>Match</th>
                                <th>Score</th>
                                <th>Active</th>
                                <th>Rejections</th>
                                <th>Completion</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var rec in recommendations.Take(10))
                            {
                                <tr style="cursor: pointer;" @onclick="@(() => SelectRecommendedSme(rec.SmeUserId))">
                                    <td>
                                        <strong>@rec.SmeUserName</strong>
                                        @if (!string.IsNullOrEmpty(rec.Specialization))
                                        {
                                            <br /><small class="text-muted">@rec.Specialization</small>
                                        }
                                    </td>
                                    <td>
                                        @if (rec.TotalExpertiseRequired > 0)
                                        {
                                            <span class="badge @GetMatchClass(rec.ExpertiseMatchCount, rec.TotalExpertiseRequired)">
                                                @rec.ExpertiseMatchCount/@rec.TotalExpertiseRequired
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @GetScoreClass(rec.SmeScore)">@rec.SmeScore</span>
                                    </td>
                                    <td>@rec.ActiveAssignmentsCount</td>
                                    <td>@rec.RecentRejectionsCount</td>
                                    <td>@(rec.CompletionRate.ToString("P0"))</td>
                                    <td>
                                        <RadzenButton Icon="add" ButtonStyle="ButtonStyle.Success" Size="ButtonSize.ExtraSmall"
                                            Click="@(() => SelectRecommendedSme(rec.SmeUserId))" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <small class="text-muted">Click on a row or use the button to select. SMEs are sorted by expertise match count, then score.</small>
            </div>
        }
        
        <div class="mb-3">
            <RadzenFormField Text="Select SME" class="w-100">
                <RadzenDropDown @bind-Value="@selectedSmeUserId" 
                               Data="@SMEs" 
                               ValueProperty="Id" 
                               TextProperty="FullName"
                               Placeholder="Select an SME to assign..."
                               AllowFiltering="true"
                               FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                               Style="width: 100%"
                               TValue="int">
                    <EmptyMessageTemplate>
                        No SMEs found
                    </EmptyMessageTemplate>
                </RadzenDropDown>
                <RadzenFormFieldValidator Component="selectedSmeUserId" Text="SME is required" />
            </RadzenFormField>
        </div>

        @if (ServiceRequest.Assignments != null && ServiceRequest.Assignments.Any(a => a.IsActive))
        {
            <div class="mb-3">
                <label class="form-label"><strong>Currently Assigned SMEs:</strong></label>
                <div>
                    @foreach (var assignment in ServiceRequest.Assignments.Where(a => a.IsActive))
                    {
                        <span class="badge bg-primary me-2 mb-2">
                            @assignment.SmeUserName
                            <button class="btn-close btn-close-white ms-2" style="font-size: 0.7em;" 
                                @onclick="@(() => UnassignSme(assignment.SmeUserId))" 
                                title="Unassign @assignment.SmeUserName"></button>
                        </span>
                    }
                </div>
            </div>
        }
    </RadzenFieldset>

    <div class="d-flex justify-content-end gap-2 mt-3">
        <RadzenButton Text="Cancel" ButtonStyle="ButtonStyle.Light" Click="@(() => DialogService.Close(false))" />
        <RadzenButton Text="Assign SME" ButtonStyle="ButtonStyle.Success" IsBusy="@isSubmitting" 
            Disabled="@(isSubmitting || selectedSmeUserId == 0)" Click="@HandleAssignClick" />
    </div>
</div>

@code {
    [Parameter] public ServiceRequestDto ServiceRequest { get; set; } = null!;
    [Parameter] public List<User> SMEs { get; set; } = new();

    private int selectedSmeUserId = 0;
    private bool isSubmitting = false;
    private List<SmeRecommendationDto>? recommendations;

    protected override async Task OnInitializedAsync()
    {
        await LoadRecommendations();
    }

    private async Task LoadRecommendations()
    {
        try
        {
            recommendations = await ServiceRequestService.GetSmeRecommendationsAsync(ServiceRequest.Id);
            StateHasChanged();
        }
        catch (Exception ex)
        {
            // Silently fail - recommendations are optional
            Console.WriteLine($"Could not load recommendations: {ex.Message}");
        }
    }

    private void SelectRecommendedSme(int smeUserId)
    {
        selectedSmeUserId = smeUserId;
        StateHasChanged();
    }

    private string GetScoreClass(int score)
    {
        if (score >= 120) return "bg-success";
        if (score >= 100) return "bg-primary";
        if (score >= 80) return "bg-warning";
        return "bg-danger";
    }

    private string GetMatchClass(int matchCount, int totalRequired)
    {
        if (matchCount == totalRequired) return "bg-success"; // Perfect match
        if (matchCount > 0) return "bg-warning"; // Partial match
        return "bg-secondary"; // No match
    }

    private async Task HandleAssignClick()
    {
        await AssignSme();
    }

    private async Task AssignSme()
    {
        if (selectedSmeUserId == 0)
        {
            NotificationService.Notify(NotificationSeverity.Error, "Validation Error", "Please select an SME");
            return;
        }

        // Check if already assigned
        if (ServiceRequest.Assignments != null && 
            ServiceRequest.Assignments.Any(a => a.IsActive && a.SmeUserId == selectedSmeUserId))
        {
            NotificationService.Notify(NotificationSeverity.Warning, "Warning", "This SME is already assigned to this service request");
            return;
        }

        if (isSubmitting) return;

        isSubmitting = true;
        StateHasChanged();
        
        try
        {
            var success = await ServiceRequestService.AssignSmeToServiceRequestAsync(ServiceRequest.Id, selectedSmeUserId);
            
            if (success)
            {
                NotificationService.Notify(NotificationSeverity.Success, "Success", "SME assigned successfully");
                await Task.Delay(100);
                DialogService.Close(true);
            }
            else
            {
                NotificationService.Notify(NotificationSeverity.Error, "Error", 
                    "Failed to assign SME. The SME may already be assigned, or the service request/SME may not exist. Please check the server logs for details.");
            }
        }
        catch (Exception ex)
        {
            NotificationService.Notify(NotificationSeverity.Error, "Error", $"Failed to assign SME: {ex.Message}");
            Console.WriteLine($"Exception in AssignSme: {ex}");
        }
        finally
        {
            isSubmitting = false;
            StateHasChanged();
        }
    }

    private async Task UnassignSme(int smeUserId)
    {
        var smeName = ServiceRequest.Assignments?.FirstOrDefault(a => a.SmeUserId == smeUserId)?.SmeUserName ?? "SME";
        
        var confirm = await DialogService.Confirm($"Are you sure you want to unassign {smeName} from this service request?",
            "Unassign SME", new ConfirmOptions { OkButtonText = "Yes", CancelButtonText = "No" });

        if (confirm == true)
        {
            try
            {
                var success = await ServiceRequestService.UnassignSmeFromServiceRequestAsync(ServiceRequest.Id, smeUserId);
                
                if (success)
                {
                    NotificationService.Notify(NotificationSeverity.Success, "Success", $"{smeName} unassigned successfully");
                    // Remove from local list
                    var assignment = ServiceRequest.Assignments?.FirstOrDefault(a => a.SmeUserId == smeUserId);
                    if (assignment != null)
                    {
                        assignment.IsActive = false;
                    }
                    StateHasChanged();
                }
                else
                {
                    NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to unassign SME");
                }
            }
            catch (Exception ex)
            {
                NotificationService.Notify(NotificationSeverity.Error, "Error", $"Failed to unassign SME: {ex.Message}");
            }
        }
    }
}

